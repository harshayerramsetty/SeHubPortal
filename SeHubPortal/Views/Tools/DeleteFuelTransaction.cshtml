@model SeHubPortal.Models.tbl_fuel_log
@using (Html.BeginForm("DeleteFuelTransaction", "Tools", FormMethod.Post))
{
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Confirmation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    @Html.HiddenFor(m => m.transaction_number)
    <div class="modal-body">
        <h6>Are you sure? Do you want to delete this transcation. Deleting this, Permanently removed from database.</h6>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-success" data-dismiss="modal">Cancel</button>

        <input type="submit" class="btn btn-danger" value="Delete" />
    </div>
</div>

}
