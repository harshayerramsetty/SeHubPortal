                                {
                                    <button onclick="location.href='@Url.Action("ChangeVehicalFuelLog", "Tools", new { vin = item.Value, loc = Model.MatchedLocID})';" style="background-color:transparent; color:#24a0ed; padding:7px 35px 7px 35px" class="btn">@item.Text</button>
                                }

                            }
                        </div>
