
@{
    ViewBag.Title = "FuelLog";
    Layout = "~/Views/Shared/_ToolsLayout.cshtml";
}

@model SeHubPortal.ViewModel.FuelLogViewModel


<html lang="en">
<head>
    <title>Vehicle Info</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>

    <style>
        #ToolsClicked {
            background-color: #f0f2f5;
            color: black;
            font-weight: 600;
        }

        #toolsBtn {
            color: black;
            font-weight: 600;
        }

        #FuelLogLink {
            color: black;
            font-weight: 700;
        }

        body {
            background-color: #f0f2f5;
            padding-right: 0 !important;
        }

        .heading {
            margin: 10px 0px 0px 0px;
        }

            .heading h2 {
                margin-top: 8px;
            }

        .card-header {
            background-color: #cde8ca;
        }

            .card-header h6 {
                color: black;
            }
       


        .imageClass {
            width: 100%;
            height: 90%;
            border-radius: 10%;
        }

        .card {
            border: 1px solid #ededed;
            margin-bottom: 30px;
            border-radius: 10px;
        }

        .card {
            position: relative;
            display: -ms-flexbox;
            display: flex;
            height: 250px;
            -ms-flex-direction: column;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 1px solid rgba(0,0,0,.125);
            border-radius: .25rem;
        }

        p {
            font-size: 14px;
        }

        .dash-stats-list {
            display: flex;
            flex-flow: column wrap;
            flex-grow: 1;
            padding-left: 5px;
            background-color: #007bff;
            margin-right: 5px;
            border-radius: 10px;
            color: white;
        }

        .btn-outline-primary {
            background-color: #007bff;
            color: white;
        }

        .transcationButtons {
            width: 100px;
        }

        .transcationButtons {
            margin: 0px 0px 0px 0px;
            border-radius: 5px;
            width: 90px;
            text-align: center;
        }
        .AuditButton {
            margin: 0px 0px 0px 12px;
            border-radius: 5px;
            width: 130px;
            text-align: center;
        }
        table {
            width: 100%;
        }

        #example_filter {
            float: right;
        }

        #example_paginate {
            float: right;
        }

        label {
            display: inline-flex;
            margin-bottom: .5rem;
            margin-top: .5rem;
        }
        .dataTables_filter
        {
            float:right;
        }
        .dataTables_filter label input
        {
            margin-left:10px;
        }

        #historyTable_info {
            float: left;
        }
        #historyTable_paginate {
            float: right;
        }
        #auditTable_info {
            float: left;
        }

        #auditTable_paginate {
            float: right;
        }
    </style>
</head>
<body>
    <div class="row heading">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb" style="background-color:white;height:100%;margin-top:0px;">
                    <li class="breadcrumb-item"><a href="@Url.Action("Calculator", "Tools")">Tools</a></li>
                    <li class="breadcrumb-item " aria-current="page">Fuel Log</li>
                </ol>
            </nav>
        </div>
        <button type="button" id="clickThis" class="btn" style="margin-bottom:14px;">
            <i class="fa fa-bars" style="font-size:25px"></i>
            <span class="sr-only">Toggle Menu</span>
        </button>
    </div>
    <div class="row" style="margin:20px;">
        @if (Model.selectedVIN is null || Model.selectedVIN == "")
        {
        <div class="card shadow-sm" style="height:auto">
            <h5 class="card-header">Vehicle List</h5>
            <div class="card-body shadow-sm bg-white">
                <div class="row people-grid-row">

                    @foreach (var vehicle in Model.vehicleInfoList)
                    {
                        if (vehicle.vehicle_status == 1)
                        {
                            string base64ProfilePic = "";
                            if (@vehicle.vehicle_image is null)
                            {
                                base64ProfilePic = "";
                            }
                            else
                            {
                                base64ProfilePic = "data:image/png;base64," + Convert.ToBase64String(@vehicle.vehicle_image);
                            }
                            <div class="col-md-6 col-lg-6 col-xl-6">
                                <div class="card shadow-sm">
                                    <a class="card-block stretched-link text-decoration-none" href="@Url.Action("FuelLog", "Tools", new { VIN=vehicle.VIN})">
                                        <div class="card-body" style="height:200px;">
                                            <div class="row">
                                                <div class="col-md-6 text-center">
                                                    <a class="booking-doc-img">
                                                        @*<img src="~/Content/profilepic.jpg" alt="User Image">*@

                                                        @if (base64ProfilePic == "")
                                                        {
                                                            <img class="imageClass" src="~/Content/jordancar.png" alt="ProfilePic" />
                                                        }
                                                        else
                                                        {
                                                            <img class="imageClass" alt="profilePic" src="@base64ProfilePic" />
                                                        }

                                                    </a>

                                                </div>
                                                <div class="col-md-6">
                                                    <text style="font-size:34px;font-weight:bold">@vehicle.vehicle_short_id </text>


                                                    <div class="row" style="margin-bottom:5px;margin-left:0px;">
                                                        <p class="mb-0" style="font-size:14px;font-style:italic">@vehicle.vehicle_long_id</p>
                                                    </div>
                                                    <div class="row" style="margin-bottom:1px;margin-left:0px;">
                                                        <p class="mb-0" style="font-size:18px;"><b>VIN:</b> @vehicle.VIN</p>
                                                    </div>
                                                    <div class="row" style="margin-bottom:1px;margin-left:0px;">
                                                        <p class="mb-0" style="font-size:18px;"><b>Plate:</b> @vehicle.vehicle_plate</p>
                                                    </div>
                                                    <div class="row" style="margin-bottom:1px;margin-left:0px;">
                                                        <p class="mb-0" style="font-size:18px;"><b> Year:</b>   @vehicle.vehicle_year</p>
                                                    </div>
                                                    <div class="row" style="margin-bottom:1px;margin-left:0px;">
                                                        <p class="mb-0" style="font-size:18px;"><b>Manufacturer:</b>   @vehicle.vehicle_manufacturer</p>
                                                    </div>
                                                    <div class="row" style="margin-bottom:0px;margin-left:0px;">
                                                        <p class="mb-0" style="font-size:18px;"><b>Model:</b>   @vehicle.vehicle_model</p>
                                                    </div>


                                                </div>


                                            </div>

                                        </div>
                                    </a>


                                </div>
                            </div>
                        }

                    }
                </div>
            </div>
        </div>
           
        }
        else
        {
            <div class="row" style="margin:0px 0px 0px 0px;">
                <div class="col-md-5">
                    <div class="row">
                        <div class="card shadow-sm" style="height:300px;">
                            <h5 class="card-header">Vehicle Details</h5>
                            <div class="card-body" style="height:200px;">
                                <div class="row">
                                    <div class="col-md-6 text-center">
                                        <a class="booking-doc-img">
                                            @*<img src="~/Content/profilepic.jpg" alt="User Image">*@

                                            @if (Model.SelectedVehicleInfo.vehicle_status == 1)
                                            {
                                                string base64ProfilePic = "";
                                                if (@Model.SelectedVehicleInfo.vehicle_image is null)
                                                {
                                                    base64ProfilePic = "";
                                                }
                                                else
                                                {
                                                    base64ProfilePic = "data:image/png;base64," + Convert.ToBase64String(Model.SelectedVehicleInfo.vehicle_image);
                                                }

                                                if (base64ProfilePic == "")
                                                {
                                                    <img class="imageClass" src="~/Content/jordancar.png" alt="ProfilePic" />
                                                }
                                                else
                                                {
                                                    <img class="imageClass" alt="profilePic" src="@base64ProfilePic" />
                                                }
                                            }
                                        </a>
                                    </div>
                                    <div class="col-md-6">
                                        <text style="font-size:34px;font-weight:bold">@Model.SelectedVehicleInfo.vehicle_short_id </text>


                                        <div class="row" style="margin-bottom:5px;margin-left:0px;">
                                            <p class="mb-0" style="font-size:14px;font-style:italic">@Model.SelectedVehicleInfo.vehicle_long_id</p>
                                        </div>
                                        <div class="row" style="margin-bottom:1px;margin-left:0px;">
                                            <p class="mb-0" style="font-size:18px;"><b>VIN:</b> @Model.SelectedVehicleInfo.VIN</p>
                                        </div>
                                        <div class="row" style="margin-bottom:1px;margin-left:0px;">
                                            <p class="mb-0" style="font-size:18px;"><b>Plate:</b> @Model.SelectedVehicleInfo.vehicle_plate</p>
                                        </div>
                                        <div class="row" style="margin-bottom:1px;margin-left:0px;">
                                            <p class="mb-0" style="font-size:18px;"><b> Year:</b>   @Model.SelectedVehicleInfo.vehicle_year</p>
                                        </div>
                                        <div class="row" style="margin-bottom:1px;margin-left:0px;">
                                            <p class="mb-0" style="font-size:18px;"><b>Manufacturer:</b>   @Model.SelectedVehicleInfo.vehicle_manufacturer</p>
                                        </div>
                                        <div class="row" style="margin-bottom:0px;margin-left:0px;">
                                            <p class="mb-0" style="font-size:18px;"><b>Model:</b>   @Model.SelectedVehicleInfo.vehicle_model</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @using (Html.BeginForm("SaveFuelReceipt", "Tools", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.SelectedVehicleInfo.VIN)
                        @Html.HiddenFor(m => m.SelectedVehicleInfo.assigned_to)
                        <div class="row">
                            <div class="card shadow-sm" style="height:450px ; width:600px;">
                                <h5 class="card-header">Submit Fuel Receipt</h5>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group row">
                                                <label for="inputEmail3" class="col-md-3 col-form-label">Vehicle ID</label>
                                                <div class="col-md-6">

                                                    @Html.EditorFor(m => m.SelectedVehicleInfo.vehicle_long_id, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="inputEmail3" class="col-md-3 col-form-label">Date</label>
                                                <div class="col-md-6">

                                                    @Html.EditorFor(m => m.fuelLogTableValues.date_of_purchase, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="inputEmail3" class="col-md-3 col-form-label">Milage</label>
                                                <div class="col-md-6">
                                                    @Html.EditorFor(m => m.fuelLogTableValues.odometer, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="inputEmail3" class="col-md-3 col-form-label">No of Liters</label>
                                                <div class="col-md-6">
                                                    @Html.EditorFor(m => m.fuelLogTableValues.no_of_liters, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="inputEmail3" class="col-md-3 col-form-label">Price/Liter</label>
                                                <div class="col-md-6">
                                                    @Html.EditorFor(m => m.fuelLogTableValues.price_per_liter, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                                </div>
                                            </div>

                                            <div class="row" style="float:right;margin-top:10px;margin-right:5px;margin-bottom:20px;">
                                                <a href="">
                                                    <input type="button" id="clearBtn" class="btn btn-danger transcationButtons" value="Clear" />
                                                </a>
                                                &nbsp;
                                                <input type="submit" class="btn btn-success transcationButtons" value="Save" />
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    }

                </div>

                <div class="col-md-7">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" style="color:black;width:200px;text-align:center" id="history-tab" data-toggle="tab" href="#history" role="tab" aria-controls="history" aria-selected="true">Fuel Log History</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " id="audit-tab" style="color:black;width:200px;text-align:center" data-toggle="tab" href="#audit" role="tab" aria-controls="audit" aria-selected="false">Audit Fuel Log </a>
                        </li>

                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade shadow-sm show bg-white active" id="history" role="tabpanel" aria-labelledby="history-tab" style="height:735px">
                            <div class="card-body">
                                <div class="row">
                                    @if (!Model.fuelLogList.Any())
                                    {
                                        <table id="example" class="table table-striped table-bordered" style="width:100%">
                                            <thead style="text-align:center">
                                                <tr>
                                                    <th>Purchase Date</th>
                                                    <th>Milage</th>
                                                    <th>No of Liters</th>
                                                    <th>Price/Liter</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>

                                        </table>
                                    }
                                    else
                                    {
                                        <table id="historyTable" class="table table-striped table-bordered display compact" cellspacing="0" style="width:100%;">
                                            <thead>
                                                <tr>

                                                    <th>Purchase Date</th>
                                                    <th>Milage</th>
                                                    <th>No of Liters</th>
                                                    <th>Price/Liter</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody style="text-align:center">
                                                @*foreach (var item in Model.fuelLogList)*@

                                                @for (int i = 0; i < Model.fuelLogList.Count(); i++)
                                                {

                                                    <tr>



                                                        <td>@Convert.ToDateTime(Model.fuelLogList[i].date_of_purchase).ToString("yyyy-MM-dd")</td>
                                                        <td>@Model.fuelLogList[i].odometer</td>
                                                        <td>@Model.fuelLogList[i].no_of_liters</td>
                                                        <td>@Model.fuelLogList[i].price_per_liter</td>
                                                        @if (Model.fuelLogList[i].audit_status == true)
                                                        {
                                                            <td>
                                                                <button disabled data-id="" class="deleteFuelTransactionBtn" data-toggle="modal" data-target="#deleteFuelTransaction" style="background-color:transparent;border:1px solid transparent;align-items:center"><i class="fa fa-trash" style="font-size:20px;opacity:0.5; color:gray;float:right"></i></button>
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td>
                                                                <button data-id="@Model.fuelLogList[i].transaction_number" class="deleteFuelTransactionBtn" data-toggle="modal" data-target="#deleteFuelTransaction" style="background-color:transparent;border:1px solid transparent;align-items:center"><i class="fa fa-trash" style="font-size:20px;color:red;float:right"></i></button>
                                                                <div class="modal fade" id="deleteFuelTransaction" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                                                    <div class="modal-dialog" role="document">
                                                                        <div id="DeleteFuelTransactionDiv">

                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </td>
                                                        }

                                                    </tr>
                                                }

                                            </tbody>

                                        </table>


                                    }
                                </div>

                            </div>
                        </div>
                        <div class="tab-pane fade shadow-sm bg-white" id="audit" role="tabpanel" aria-labelledby="audit-tab" style="height:735px">
                            <div class="card-body">
                                <div class="row">
                                    @using (Html.BeginForm("SubmitAuditStatus", "Tools", FormMethod.Post))
                                    {
                                        @Html.HiddenFor((m => m.SelectedVehicleInfo.VIN))
                                        <input type="submit" class="btn btn-success AuditButton" value="Submit Audit" style="float:left" />
                                        if (!Model.fuelLogList.Any())
                                        {
                                            <table id="example" class="table table-striped table-bordered" style="width:100%">
                                                <thead style="text-align:center">
                                                    <tr>
                                                        <th>Purchase Date</th>
                                                        <th>Milage</th>
                                                        <th>No of Liters</th>
                                                        <th>Price/Liter</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>

                                            </table>
                                        }
                                        else
                                        {
                                            <table id="auditTable" class="table table-striped table-bordered display compact" cellspacing="0" style="width:100%;">
                                                <thead>
                                                    <tr>

                                                        <th>Purchase Date</th>
                                                        <th>Milage</th>
                                                        <th>No of Liters</th>
                                                        <th>Price/Liter</th>
                                                        <th>Audit Status</th>

                                                    </tr>
                                                </thead>
                                                <tbody style="text-align:center">
                                                    @*foreach (var item in Model.fuelLogList)*@

                                                    @for (int i = 0; i < Model.fuelLogList.Count(); i++)
                                                    {

                                                        <tr>
                                                            @Html.HiddenFor(m => m.fuelLogList[i].transaction_number)



                                                            <td>@Convert.ToDateTime(Model.fuelLogList[i].date_of_purchase).ToString("yyyy-MM-dd")</td>
                                                            <td>@Model.fuelLogList[i].odometer</td>
                                                            <td>@Model.fuelLogList[i].no_of_liters</td>
                                                            <td>@Model.fuelLogList[i].price_per_liter</td>
                                                            <td>@Html.CheckBoxFor(m => m.fuelLogList[i].audit_status, new { htmlAttributes = new { @class = "form-check-input", @type = "checkbox" } })</td>
                                                            @*<td>
                                                                <button data-id="@Model.fuelLogList[i].transaction_number" class="deleteFuelTransactionBtn" data-toggle="modal" data-target="#deleteFuelTransaction" style="background-color:transparent;border:1px solid transparent;align-items:center"><i class="fa fa-trash" style="font-size:20px;color:red;float:right"></i></button>
                                                                <div class="modal fade" id="deleteFuelTransaction" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                                                    <div class="modal-dialog" role="document">
                                                                        <div id="DeleteFuelTransactionDiv">

                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </td>*@
                                                        </tr>
                                                    }

                                                </tbody>

                                            </table>


                                        }
                                    }
                                </div>

                            </div>
                        </div>

                    </div>


                </div>

            </div>
        }
    </div>
   

    <script>


        $(document).ready(function () {
            $('#clickThis').on('click', function () {
                $('#sidebar').toggleClass('active');
            });

             $('.deleteFuelTransactionBtn').click(function () {
                var id = $(this).data('id');

                console.log(id);
                $.ajax({
                            url: '@Url.Action("DeleteFuelTransaction", "Tools")',
                            data: { value: id },
                            type: 'GET',
                            success: function (data) {
                                $("#DeleteFuelTransactionDiv").html(data);
                    }
                });
            });

            $.noConflict(true);

            $('#historyTable').DataTable(

                {

                    "aLengthMenu": [[5, 10, 25, -1], [5, 10, 25, "All"]],
                    "iDisplayLength": 10,
                    "bLengthChange": false,
                    "orderFixed": [0, "desc"]

                }
            );


            $('#auditTable').DataTable(

                {

                    "aLengthMenu": [[5, 10, 25, -1], [5, 10, 25, "All"]],
                    "iDisplayLength": 10,
                    "bLengthChange": false,
                    "orderFixed": [0, "desc"]

                }
            );


        });



    </script>

</body>
</html>




