                                                    @*<img src="~/Content/profilepic.jpg" alt="User Image">*@

                                                    @if (Model.SelectedVehicleInfo.vehicle_status == 1)
                                                    {
                                                        string base64ProfilePic = "";
                                                        if (@Model.SelectedVehicleInfo.vehicle_image is null)
                                                        {
                                                            base64ProfilePic = "";
                                                        }
                                                        else
                                                        {
                                                            base64ProfilePic = "data:image/png;base64," + Convert.ToBase64String(Model.SelectedVehicleInfo.vehicle_image);
                                                        }

                                                        if (base64ProfilePic == "")
                                                        {
                                                            <img class="imageClass" style="width:250px; height:160px" src="~/Content/jordancar.png" alt="ProfilePic" />
                                                        }
                                                        else
                                                        {
                                                            <img class="imageClass" style="width:250px; height:160px" alt="profilePic" src="@base64ProfilePic" />
                                                        }
                                                    }
                                                </a>

                                            </div>
