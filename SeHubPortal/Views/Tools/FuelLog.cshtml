                                                        {
                                                            <span class="btn" style="font-size:20px; color:white;">
                                                                @Math.Round(@Model.SelectedVehicleInfo.current_milage.Value, 1).ToString("N0")
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="btn" style="font-size:20px; color:white;">
                                                                0
                                                            </span>
                                                        }
                                                    </div>
                                                    <div class="col-md-4 text-center" style="padding-top:5px; font-size:12px; color:white; border-left:2px solid white">
                                                        <label>KM</label>
                                                    </div>
                                                </div>

                                                <div class="row" style="padding:7px; margin-bottom:10px; border-radius:10px; background-color:#357efc">
                                                    <div class="col-md-8 text-center">
                                                        @if (@Model.SelectedVehicleInfo.efficiency_price.HasValue)
                                                        {
                                                            <span class="btn" style="font-size:20px; color:white;">
                                                                @Math.Round(@Model.SelectedVehicleInfo.efficiency_price.Value, 2).ToString("N2")
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="btn" style="font-size:20px; color:white;">
                                                                0
                                                            </span>
                                                        }
                                                    </div>
