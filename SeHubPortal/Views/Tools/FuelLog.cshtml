                            {
                                if (Model.MatchedVehicle == item.Text)
                                {
                                    <button onclick="location.href='@Url.Action("ChangeVehicalFuelLog", "Tools", new { vin = item.Value, loc = Model.MatchedLocID})';" style="background-color:white; color:black;font-weight:bold; padding:7px 35px 7px 35px" class="btn">@item.Text</button>
                                }
