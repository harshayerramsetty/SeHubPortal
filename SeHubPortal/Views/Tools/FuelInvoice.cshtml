
@{
    ViewBag.Title = "FuelInvoice";
    Layout = "~/Views/Shared/_ToolsLayout.cshtml";
}

@model SeHubPortal.ViewModel.FuelInvoiceViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Vehicle Info</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>


    @if (Model.SehubAccess.plant > 0)
    {
        <style>
            #PlantClicked {
                display: block !important;
            }
        </style>
    }

    @if (Model.SehubAccess.payroll > 0)
    {
        <style>
            #PayrollClicked {
                display: block !important;
            }
        </style>
    }

    @if (Model.SehubAccess.fleetTVT > 0)
    {
        <style>
            #FleetTVTClicked {
                display: block !important;
            }
        </style>
    }

    @if (Model.SehubAccess.treadTracker > 0)
    {
        <style>
            #treadTrackereClicked {
                display: block !important;
            }
        </style>
    }

    @if (Model.SehubAccess.library_access > 0)
    {
        <style>
            #libraryClicked {
                display: block !important;
            }
        </style>
    }

    @if (Model.SehubAccess.main > 0)
    {
        <style>
            #mainClicked {
                display: block !important;
            }
        </style>
    }

    @if (Model.SehubAccess.settings == 3)
    {
        <style>
            #SettingsClicked {
                display: block !important;
            }
        </style>
    }

    @if (Model.SehubAccess.management == 3)
    {
        <style>
            #ManagementClicked {
                display: block !important;
            }
        </style>
    }


    @if (Model.SehubAccess.tools_dashboard > 0)
    {
        <style>
            #DashboardLink {
                display: block !important;
            }
        </style>
    }

    @if (Model.SehubAccess.customer_reporting > 0)
    {
        <style>
            #CRMLink {
                display: block !important;
            }
        </style>
    }

    @if (Model.SehubAccess.employee_id == 10577 || Model.SehubAccess.employee_id == 10901)
    {
        <style>
            #ExpnseClaimLink {
                display: block !important;
            }
        </style>
    }

    <style>

        div.a {
            white-space: nowrap;
            width: 100px;
            overflow: hidden;
            text-overflow: ellipsis;
        }



        #FuelLogLink {
            display: block !important;
        }

        #toolsClicked {
            display: block !important;
        }

        #toolsClicked {
            background-color: #f0f2f5;
            color: black;
            font-weight: 600;
        }

        #toolsBtn {
            color: black;
            font-weight: bold;
        }

        #FuelLogLink {
            color: black;
            font-weight: 700;
            background-color: #f0f2f5;
        }

        body {
            background-color: #f0f2f5;
            padding-right: 0 !important;
        }

        .heading {
            margin: 10px 0px 0px 0px;
        }

            .heading h2 {
                margin-top: 8px;
            }

        .card-header {
            background-color: #cde8ca;
        }

            .card-header h6 {
                color: black;
            }



        .imageClass {
            width: 100%;
            height: 90%;
            border-radius: 10%;
        }

        .card {
            border: 1px solid #ededed;
            margin-bottom: 30px;
            border-radius: 10px;
        }

        .card {
            position: relative;
            display: -ms-flexbox;
            display: flex;
            height: 250px;
            -ms-flex-direction: column;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 1px solid rgba(0,0,0,.125);
            border-radius: .25rem;
        }

        p {
            font-size: 14px;
        }

        .dash-stats-list {
            display: flex;
            flex-flow: column wrap;
            flex-grow: 1;
            padding-left: 5px;
            background-color: #007bff;
            margin-right: 5px;
            border-radius: 10px;
            color: white;
        }

        .btn-outline-primary {
            background-color: #007bff;
            color: white;
        }

        .transcationButtons {
            width: 100px;
        }

        .transcationButtons {
            margin: 0px 0px 0px 0px;
            border-radius: 5px;
            width: 90px;
            text-align: center;
        }

        .AuditButton {
            margin: 0px 0px 0px 12px;
            border-radius: 5px;
            width: 130px;
            text-align: center;
        }

        table {
            width: 100%;
        }

        #example_filter {
            float: right;
        }

        #example_paginate {
            float: right;
        }

        label {
            display: inline-flex;
            margin-bottom: .5rem;
            margin-top: .5rem;
        }

        .dataTables_filter {
            float: right;
        }

            .dataTables_filter label input {
                margin-left: 10px;
            }

        #historyTable_info {
            float: left;
        }

        #historyTable_paginate {
            float: right;
        }

        #auditTable_info {
            float: left;
        }

        #auditTable_paginate {
            float: right;
        }

        .example::-webkit-scrollbar {
            display: none;
        }

        /* Hide scrollbar for IE, Edge and Firefox */
        .example {
            -ms-overflow-style: none; /* IE and Edge */
            scrollbar-width: none; /* Firefox */
        }
    </style>
</head>
<body>

    <div class="row heading">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb" style="background-color:white;height:100%;margin-top:0px;">
                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Tools")">Tools</a></li>
                    <li class="breadcrumb-item " aria-current="page">Fuel Log</li>
                    <li class="breadcrumb-item " aria-current="page">Invoiced</li>
                    <label style="margin: 0px 3px 0px 1180px ">Location:</label>

                    @using (Html.BeginForm("FuelInvoice", "Tools", FormMethod.Get))
                    {
                        <div>
                            @Html.DropDownListFor(m => m.MatchedLocation, Model.LocationsList, "Select", new { @onChange = "this.form.submit()", @type = "text", @style = "text-align-last: center;width:100px;height:23px;font-size:15px;margin-left:6px;" })
                            <noscript> <input style="display:none" class="btn btn-success" type="submit" value="Search" /></noscript>
                        </div>
                    }
                </ol>
            </nav>
        </div>
        <button type="button" id="clickThis" class="btn" style="margin-bottom:14px;">
            <i class="fa fa-bars" style="font-size:25px"></i>
            <span class="sr-only">Toggle Menu</span>
        </button>
    </div>

    <div class="row" style="padding:0px 15px 0px 0px; margin-left:15px">
        <div class="col-md-6">
            @using (Html.BeginForm("SaveFuelInvoiceReceipt", "Tools", FormMethod.Post))
            {
                <div class="row" style="margin-top:0px">
                    <div class="col-lg-12" style="padding:0px">
                        <div class="card shadow-sm" style="height:345px; border:2px solid #aeafb0">
                            <h5 class="card-header" style="font-weight:bold; padding:5px 5px 5px 15px; background-color:#aeafb0; color: white">Submit Fuel Receipt</h5>
                            <div class="card-body">
                                <div class="row">
                                    @Html.HiddenFor(m => m.MatchedLocation)
                                    <div class="col-lg-6">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <label style="font-size:14px;">Date</label>
                                            </div>
                                            <div class="col-lg-8">
                                                @Html.EditorFor(m => m.fuelLogInvoiceTableValues.date_of_purchase, new { htmlAttributes = new { @style = "width:250px", type = "date", @required = "required" } })
                                            </div>
                                        </div>
                                        <div class="row" style="margin-top:11px">
                                            <div class="col-lg-4">
                                                <label style="font-size:14px;">Invoice #</label>
                                            </div>
                                            <div class="col-lg-8">
                                                @Html.EditorFor(m => m.fuelLogInvoiceTableValues.invoice_number, new { htmlAttributes = new { @style = "width:250px", @required = "required" } })
                                            </div>
                                        </div>
                                        <div class="row" style="margin-top:11px">
                                            <div class="col-lg-4">
                                                <label style="font-size:14px;">No of Liters</label>
                                            </div>
                                            <div class="col-lg-8">
                                                @Html.EditorFor(m => m.fuelLogInvoiceTableValues.no_of_liters, new { htmlAttributes = new { @style = "width:250px", @required = "required" } })
                                            </div>
                                        </div>
                                        <div class="row" style="margin-top:11px">
                                            <div class="col-lg-4">
                                                <label style="font-size:14px;">Price/Liter</label>
                                            </div>
                                            <div class="col-lg-8">
                                                @Html.EditorFor(m => m.fuelLogInvoiceTableValues.price_per_liter, new { htmlAttributes = new { @style = "width:250px", @required = "required" } })
                                            </div>
                                        </div>
                                        <div class="row" style="margin-top:11px">
                                            <div class="col-lg-4">
                                                <label style="font-size:14px;">Charge Account</label>
                                            </div>
                                            <div class="col-lg-8">
                                                @{
                                                    List
                                                    <SelectListItem>
                                                    listItems = new List
                                                    <SelectListItem>
                                                    ();
                                                    listItems.Add(new SelectListItem
                                                    {
                                                        Text = "Select Type",
                                                        Value = ""
                                                    });
                                                    listItems.Add(new SelectListItem
                                                    {
                                                        Text = "Irving Account",
                                                        Value = "Irving Account"
                                                    });
                                                    listItems.Add(new SelectListItem
                                                    {
                                                        Text = "Ultramar Account",
                                                        Value = "Ultramar Account"
                                                    });
                                                    listItems.Add(new SelectListItem
                                                    {
                                                        Text = "VISA Expense",
                                                        Value = "VISA Expense"
                                                    });
                                                }
                                                @Html.DropDownListFor(m => m.fuelLogInvoiceTableValues.change_type, listItems, new { @class = "text-center", @style = "text-align-last: center; width:250px; height:28px", @required = "required", @id = "Brand" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.TextAreaFor(m => m.fuelLogInvoiceTableValues.comments, 9, 48, new { @placeholder = " Comments (Optional)" })
                                    </div>
                                </div>

                                <div class="row" style="float:right;margin-top:20px;margin-right:0px;margin-bottom:20px;">
                                    <a href="">
                                        <input type="button" id="clearBtn" style="padding-top:0px; width:100px; height:25px" class="btn btn-danger transcationButtons" value="Clear" />
                                    </a>
                                    &nbsp;&nbsp;
                                    <input type="submit" style="padding-top:0px; width:100px; height:25px" class="btn btn-success transcationButtons" value="Save" />
                                </div>




                            </div>
                        </div>
                    </div>


                </div>
            }

        </div>

        <div class="col-md-6">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" style="width:200px;text-align:center;" id="history-tab" data-toggle="tab" href="#history" role="tab" aria-controls="history" aria-selected="true">Fuel Log History</a>
                </li>
                @if (Model.SehubAccess.fuel_log > 2)
                {
                    <li class="nav-item">
                        <a class="nav-link " id="audit-tab" style="width:200px;text-align:center" data-toggle="tab" href="#audit" role="tab" aria-controls="audit" aria-selected="false">Audit Fuel Log </a>
                    </li>
                }

            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade shadow-sm show bg-white active" id="history" role="tabpanel" aria-labelledby="history-tab" style="height:677px;">
                    <div class="card-body" style="height:660px; overflow:auto">
                        <div class="row" style="padding:10px">
                            @if (!Model.fuelLogInvoicedList.Any())  //!Model.fuelLogInvoicedList.Any()
                            {
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead class="thead-dark" style="text-align:center">
                                        <tr>

                                            <th style="font-size:10px; padding:0px">Purchase Date</th>
                                            <th style="font-size:10px; padding:0px">Invoice #</th>
                                            <th style="font-size:10px; padding:0px">No of Liters</th>
                                            <th style="font-size:10px; padding:0px">Price/Liter</th>
                                            <th style="font-size:10px; padding:0px">Charge Account</th>
                                            <th style="width:120px; font-size:10px; padding:0px">Comments</th>
                                            <th style="font-size:10px; padding:0px">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>

                                </table>
                            }
                            else
                            {
                                <table id="historyTable" class="table table-striped table-bordered display compact" cellspacing="0" style="width:100%;">
                                    <thead class="thead-dark" style="text-align:center">
                                        <tr>

                                            <th style="font-size:10px; padding:0px">Purchase Date</th>
                                            <th style="font-size:10px; padding:0px">Invoice #</th>
                                            <th style="font-size:10px; padding:0px">No of Liters</th>
                                            <th style="font-size:10px; padding:0px">Price/Liter</th>
                                            <th style="font-size:10px; padding:0px">Charge Account</th>
                                            <th style="width:300px; font-size:10px; padding:0px">Comments</th>
                                            <th style="font-size:10px; padding:0px">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody style="text-align:center">
                                        @*foreach (var item in Model.fuelLogList)*@

                                        @for (int i = 0; i < Model.fuelLogInvoicedList.Count(); i++)
                                        {

                                            <tr>

                                                <td style="padding:3px">@Convert.ToDateTime(Model.fuelLogInvoicedList[i].date_of_purchase).ToString("yyyy-MM-dd")</td>
                                                <td style="padding:3px">@Model.fuelLogInvoicedList[i].invoice_number</td>
                                                <td style="padding:3px">@Model.fuelLogInvoicedList[i].no_of_liters</td>
                                                <td style="padding:3px">@Model.fuelLogInvoicedList[i].price_per_liter</td>
                                                <td style="padding:3px">@Model.fuelLogInvoicedList[i].change_type</td>
                                                <td style="padding:3px" data-toggle="tooltip" data-placement="top" title="@Model.fuelLogInvoicedList[i].comments"><div class="a">@Model.fuelLogInvoicedList[i].comments</div></td>
                                                @if (Model.fuelLogInvoicedList[i].audit_status == true)
                                                {
                                                    <td style="padding:3px">
                                                        <button disabled data-id="" class="deleteFuelTransactionBtn" data-toggle="modal" data-target="#deleteFuelTransaction" style="background-color:transparent;border:1px solid transparent;align-items:center"><i class="fa fa-trash" style="font-size:20px;opacity:0.5; color:gray;float:right"></i></button>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td style="padding:3px">
                                                        <button data-id="@Model.fuelLogInvoicedList[i].transaction_number" class="deleteFuelTransactionBtn" data-toggle="modal" data-target="#deleteFuelTransaction" style="background-color:transparent;border:1px solid transparent;align-items:center"><i class="fa fa-trash" style="font-size:20px;color:red;float:right"></i></button>
                                                        <div class="modal fade" id="deleteFuelTransaction" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                                            <div class="modal-dialog" role="document">
                                                                <div id="DeleteFuelTransactionDiv">

                                                                </div>

                                                            </div>
                                                        </div>
                                                    </td>
                                                }

                                            </tr>
                                        }

                                    </tbody>

                                </table>


                            }
                        </div>

                    </div>
                </div>

                <div class="tab-pane fade shadow-sm bg-white" id="audit" role="tabpanel" aria-labelledby="audit-tab" style="height:677px; ">
                    @if (Model.SehubAccess.fuel_log > 2)
                    {
                        <div class="card-body">


                            @using (Html.BeginForm("SubmitAuditStatus", "Tools", FormMethod.Post))
                            {

                                <div class="row" style="margin-right: 0px; padding-left:10px; height:600px; overflow:auto">
                                    @if (!Model.fuelLogInvoicedList.Any())
                                    {
                                        <table id="example" class="table table-striped table-bordered" style="width:750px">
                                            <thead class="thead-dark" style="text-align:center">
                                                <tr>
                                                    <th style="font-size:10px; padding:0px">Purchase Date</th>
                                                    <th style="font-size:10px; padding:0px">No of Liters</th>
                                                    <th style="font-size:10px; padding:0px">Price/Liter</th>
                                                    <th style="font-size:10px; padding:0px">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>

                                        </table>
                                    }
                                    else
                                    {
                                        <table id="auditTable" class="table table-striped table-bordered display compact" cellspacing="0" style="width:740px;">
                                            <thead class="thead-dark">
                                                <tr>

                                                    <th style="font-size:10px; padding:0px">Purchase Date</th>
                                                    <th style="font-size:10px; padding:0px">No of Liters</th>
                                                    <th style="font-size:10px; padding:0px">Price/Liter</th>
                                                    <th style="font-size:10px; padding:0px">Audit Status</th>

                                                </tr>
                                            </thead>
                                            <tbody style="text-align:center">
                                                @*foreach (var item in Model.fuelLogList)*@

                                                @for (int i = 0; i < Model.fuelLogInvoicedList.Count(); i++)
                                                {
                                                    <tr>
                                                        @Html.HiddenFor(m => m.fuelLogInvoicedList[i].transaction_number)

                                                        <td style="padding:3px">@Convert.ToDateTime(Model.fuelLogInvoicedList[i].date_of_purchase).ToString("yyyy-MM-dd")</td>
                                                        <td style="padding:3px">@Model.fuelLogInvoicedList[i].no_of_liters</td>
                                                        <td style="padding:3px">@Model.fuelLogInvoicedList[i].price_per_liter</td>
                                                        <td style="padding:3px">@Html.CheckBoxFor(m => m.fuelLogInvoicedList[i].audit_status, new { htmlAttributes = new { @class = "form-check-input", @type = "checkbox" } })</td>
                                                        @**
                                                        @*<td>
                                                              <button data-id="@Model.fuelLogList[i].transaction_number" class="deleteFuelTransactionBtn" data-toggle="modal" data-target="#deleteFuelTransaction" style="background-color:transparent;border:1px solid transparent;align-items:center"><i class="fa fa-trash" style="font-size:20px;color:red;float:right"></i></button>
                                                              <div class="modal fade" id="deleteFuelTransaction" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                                                  <div class="modal-dialog" role="document">
                                                                      <div id="DeleteFuelTransactionDiv">

                                                                      </div>

                                                                  </div>
                                                              </div>
                                                        </td>*@
                                                    </tr>
                                                }

                                            </tbody>

                                        </table>


                                    }
                                </div>
                                <div class="row" style="margin-top:15px">
                                    <div class="col-lg-12">
                                        <input type="submit" class="btn btn-success AuditButton" value="Submit Audit" style="padding-top:0px; height:25px; width:150px; float:right; margin-bottom:15px" />
                                    </div>
                                </div>

                            }


                        </div>
                    }
                </div>



            </div>


        </div>
    </div>

</body>
</html>
