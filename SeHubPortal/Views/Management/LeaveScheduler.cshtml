                        <td style="text-align:center">@item.empid</td>
                        <td style="text-align:center">@Model.employeeVacList.Where(x => x.employee_id == item.empid).Select(x => x.full_name).FirstOrDefault()</td>
                        <td style="text-align:center">@item.start_date.ToString("dd, MMM yyyy (dddd)")</td>
                        <td style="text-align:center">
                            @if (@item.end_date.HasValue)
                            {
                                @item.end_date.Value.ToString("dd, MMM yyyy (dddd)")
                            }
