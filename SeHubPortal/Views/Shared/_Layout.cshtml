    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <style>
        
        body {
         overflow-x: hidden!important;
         overflow-y: hidden;
        }


        #TabLinks {
            margin-left: 7%;
        }

        .tabLinksSpace {
            margin-left: 40px;
        }

        #mainButton:focus {
            box-shadow: none;
        }

        #libraryBtn:focus {
            box-shadow: none;
        }

        #treadTrackerButton:focus {
            box-shadow: none;
        }

        #managementBtn:focus {
            box-shadow: none;
        }

        #toolsBtn:focus {
            box-shadow: none;
        }

        #payrollBtn:focus {
