@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/sidebar/sidebar.css")
@Scripts.Render("~/Content/sidebar/sidebar.js")
<style>
        #sidebar {
            background-color: white;
            color: black
        }

        #sidebar ul li a {
            color: black;
            border-bottom: 2px solid #f0f2f5;
            border-right: 1px solid #f0f2f5;
        }

        #sidebar ul li.active > a {
            color: black;
            border-bottom: 2px solid #f0f2f5;
        }
</style>
<div class="wrapper d-flex align-items-stretch">
    <nav id="sidebar" class="leftPane" style="border-color:black;border-width:10px;">
        @*<div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>*@

        <ul class="list-unstyled components mb-5">
            <li class="active" style="display:block" id="DashboardLink">
                <a class="commonSideNavigation" id="DashboardClicked" href="@Url.Action("Dashboard_man", "Management")">Dashboard</a>
            </li>
            <li class="active" style="display:block" id="DRLink">
                <a class="commonSideNavigation" id="DRClicked" href="@Url.Action("DisputeResolution", "Tools")">Dispute Resolution</a>
            </li>
            <li class="active" style="display:block" id="ExpnseClaimLink">
                <a class="commonSideNavigation" id="ExpnseClaimClicked" href="@Url.Action("ExpnseClaim", "Tools")">ExpnseClaim</a>
            </li>
            <li class="active" style="display:block" id="LeaveSchedulerLink">
                <a class="commonSideNavigation" id="LeaveSchedulerClicked" href="@Url.Action("LeaveScheduler", "Management", new { values=""})">Vacation Scheduler</a>
            </li>
            <li class="active" style="display:block" id="EmployeeDeductionsLink">
                <a class="commonSideNavigation" id="EmployeeDeductionsClicked" href="@Url.Action("EmployeeDeductions", "PayrollDeposits", new { payroll_id = 0})">Employee Deductions</a>
            </li>
            <li class="active" style="display:block">
                <a class="commonSideNavigation" href="@Url.Action("Station", "Retread", new { pane = "barcode", barcode = "12345600", stationBarcode = "0025"})">Station</a>
            </li> 
        </ul>
    </nav>

    <!-- Page Content  -->
    <div id="content">
        <div id="sideloading" style="display:none">
            <div style="display:flex; width:100%; height:50em; justify-content:center; align-items:center">
                <img src="~/Content/giphy.gif" style="width:170px" alt="Alternate Text" />
            </div>
        </div>
        <div id="ToolsArea">
            @RenderBody()
        </div>
    </div>
</div>
<script src="~/Content/sidebar/sidebar.js"></script>
<script>
    $(".commonSideNavigation").on('click', function (event) {
        event.stopPropagation();
        event.stopImmediatePropagation();
        $('#sideloading').css('display', 'block')
        $('#ToolsArea').css('display', 'none')
    });
</script>
@RenderSection("scripts", required: false)