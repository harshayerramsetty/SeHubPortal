@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/sidebar/sidebar.css")
@Scripts.Render("~/Content/sidebar/sidebar.js")
<style>
    #sidebar {
        background-color: white;
        color: black
    }

        #sidebar ul li a {
            color: black;
            border-bottom: 2px solid #f0f2f5;
            border-right: 1px solid #f0f2f5;
        }

        #sidebar ul li.active > a {
            color: black;
            border-bottom: 2px solid #f0f2f5;
        }
</style>
<div class="wrapper d-flex align-items-stretch">
    <nav id="sidebar" class="leftPane">
        @*<div class="custom-menu" >
                <button type="button" id="sidebarCollapse" class="btn btn-primary" >
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>

            </div>*@
        <ul class="list-unstyled components mb-5">

            <li class="active" style="display:none" id="DashboardLink">
                <a class="commonSideNavigation" id="NewOrderClicked" href="@Url.Action("Dashboard", "TreadTracker", new { values = ""})">Dashboard</a>
            </li>
            <li class="active" style="display:none" id="CustomersLink">
                <a class="commonSideNavigation" id="CustomersClicked" href="@Url.Action("Customers", "TreadTracker")">Customers</a>
            </li>

            @*<li class="active" style="display:none" id="NewOrderLink">
                    <a id="NewOrderClicked" href="@Url.Action("NewOrder", "TreadTracker", new { values = ""})">New Order</a>
                </li>
                <li>
                    <a id="EditOrderClicked" href="@Url.Action("EditOrder", "TreadTracker")"><span class="fa fa-user mr-3"></span> Edit Order</a>
                </li>
                <li class="active" style="display:none" id="OpenOrderLink">
                    <a id="OpenOrderClicked" href="@Url.Action("OpenOrder", "TreadTracker", new { id = "",barcode="" })">Open Order</a>
                </li>*@

            <li class="active" style="display:none" id="FailureAnalysisLink">
                <a class="commonSideNavigation" id="FailureAnalysisClicked" href="@Url.Action("FailureAnalysis", "TreadTracker", new { values = ""})">Failure Analysis</a>
            </li>

            <li class="active" style="display:none" id="ProductionReportLink">
                <a class="commonSideNavigation" id="ProductionReportClicked" href="@Url.Action("ProductionReport", "TreadTracker", new { values = ""})">Production Report</a>
            </li>

            <li class="active" style="display:block" id="ProductionScheduleLink">
                <a class="commonSideNavigation" id="ProductionScheduleClicked" href="@Url.Action("ProductionSchedule", "TreadTracker")">Production Schedule</a>
            </li>

        </ul>

    </nav>

    <div id="content">
        <div id="sideloading" style="display:none">
            <div style="display:flex; width:100%; height:54em; justify-content:center; align-items:center">
                <img src="~/Content/giphy.gif" style="width:170px" alt="Alternate Text" />
            </div>
        </div>
        <div id="TreadTrackerArea">
            @RenderBody()
        </div>
    </div>
</div>

<script src="~/Content/sidebar/sidebar.js"></script>
<script>
    $(".commonSideNavigation").on('click', function (event) {
        event.stopPropagation();
        event.stopImmediatePropagation();
        $('#sideloading').css('display', 'block')
        $('#TreadTrackerArea').css('display', 'none')
    });
</script>
@RenderSection("scripts", required: false)