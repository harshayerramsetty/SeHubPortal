
@{
    ViewBag.Title = "_Settings_Harpoon";
    Layout = "~/Views/Shared/_LayoutHarpoon.cshtml";
}

@Styles.Render("~/Content/sidebar/sidebar.css")
@Scripts.Render("~/Content/sidebar/sidebar.js")

<style>
    #sidebar {
        background-color: white;
        color: black
    }

        #sidebar ul li a {
            color: black;
            border-bottom: 2px solid #f0f2f5;
            border-right: 1px solid #f0f2f5;
        }

        #sidebar ul li.active > a {
            color: black;
            border-bottom: 2px solid #f0f2f5;
        }
</style>
<div class="wrapper d-flex align-items-stretch">
    <nav id="sidebar">
        <ul class="list-unstyled components mb-5">
            <li class="active" style="display:block" id="DashboardLink">
                <a id="DashboardClicked" href="@Url.Action("Dashboard", "VehicleHarpoon")">Dashboard</a>
            </li>
            <li class="active" style="display:block" id="FuelReportingLink">
                <a id="FuelReportingClicked" href="@Url.Action("FuelReporting", "VehicleHarpoon", new { VIN = "", loc = ""})">Fuel Reporting</a>
            </li>
        </ul>
    </nav>

    <!-- Page Content  -->
    <div id="content">
        <div id="LibraryArea">
            @RenderBody()
        </div>
    </div>
</div>
<script src="~/Content/sidebar/sidebar.js"></script>

