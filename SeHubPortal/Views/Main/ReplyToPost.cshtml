@model SeHubPortal.ViewModel.StoryBoardViewModel

@using (Html.BeginForm("ReplyToPost", "Main", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="modal-content" style="width:800px">
        <div class="modal-header" style="padding:5px 15px;">
            <div class="row">
                <div class="col-md-12" style="display:flex; align-items:center">
                    <h5 style="margin:0; padding:0; font-weight:bold">Reply to</h5>
                </div>
            </div>
        </div>
        <div class="modal-body" style="padding:0px">
            <div class="example" style="max-height: 60vh; overflow-y: auto; padding: 10px 0px; margin-bottom:15px">
                @foreach (var post in Model.Posts.Where(x => !x.post_id.Contains('_')).ToList())
                {
                    <div class="row" style="padding:0px 15px">
                        <div class="col-md-12" style="display:flex">
                            @{
                                string source_pst = "";

                                if (post.auther_img != null && post.auther_img != "")
                                {
                                    source_pst = "data:image/png;base64," + post.auther_img;
                                }
                            }

                            <div style="flex:3.5">
                                <div class="employeeTag">
                                    @if (source_pst == "")
                                    {
                                        <img src="~/Content/profilepic.jpg" alt="Alternate Text" style="border-radius:50%; width:2.5vw; margin-right:10px" />
                                    }
                                    else
                                    {
                                        <img src="@source_pst" alt="Alternate Text" style="border-radius: 50%; width: 2.5vw; margin-right: 10px" />
                                    }
                                    <div style="display: flex;flex-direction: column;justify-content: center;color: dimgray">
                                        <span style="font-size:0.4vw; font-weight:bold">
                                            @post.auther
                                        </span>
                                        <span style="font-size:0.4vw; font-weight:bold">
                                            @post.auther_position
                                        </span>
                                        <span style="font-size:0.4vw; font-weight:bold">
                                            @post.loc_id
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="comment" style="flex:10">
                                <div class="comment-tag"></div>
                                <div class="comment-body" style="display:flex; align-items:center; flex-direction:column">
                                    <div style="display:flex; width:100%; font-weight:bold; font-size:0.5vw; justify-content:flex-end; margin-bottom:10px">
                                        @post.date.ToString("dddd MMM dd yyyy hh:mm tt")
                                    </div>
                                    <div style="display:flex; margin-bottom:5px; width:100%; color: dimgray; font-size:0.6vw; font-weight:bold; border-radius:5px">
                                        <div style="margin-right:5px; background-color:white; padding:3px 10px; border-radius:5px; border:1px solid dimgray">
                                            @post.catgory
                                        </div>
                                        <div style="padding:3px 10px; background-color:#dcf1fa; border-radius:5px; width:100%">
                                            @post.subject
                                        </div>
                                    </div>
                                    <div style="width:100%; background-color:#f5f5f5; color: dimgray; font-size:0.6vw; font-weight:bold; padding:3px 10px; border-radius:5px">
                                        @foreach (var line in post.details.Split(new Char[] { ',', '.', '?' }))
                                        {
                                            <p style="padding:0; margin:0">@line</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12" style="display:flex">
                            <div style="flex:3;"></div>
                            <div style="flex:10">
                                @foreach (var comment in Model.Posts.Where(x => x.post_id.StartsWith(post.post_id + "_")))
                                {
                                    <div class="row" style="padding:0px 15px 0px 25px">
                                        <div class="col-md-12" style="display:flex">

                                            @{
                                                string source = "";

                                                if (comment.auther_img != null && comment.auther_img != "")
                                                {
                                                    source = "data:image/png;base64," + comment.auther_img;
                                                }
                                            }

                                            <div style="flex:4">
                                                <div class="employeeTag">
                                                    @if (source == "")
                                                    {
                                                        <img src="~/Content/profilepic.jpg" alt="Alternate Text" style="border-radius:50%; width:2.5vw; margin-right:10px" />

                                                    }
                                                    else
                                                    {
                                                        <img src="@source" alt="Alternate Text" style="border-radius:50%; width:2.5vw; margin-right:10px" />
                                                    }

                                                    <div style="display:flex; flex-direction:column; justify-content:center; color:dimgray">
                                                        <span style="font-size:0.4vw; font-weight:bold">
                                                            @comment.auther
                                                        </span>
                                                        <span style="font-size:0.4vw; font-weight:bold">
                                                            @comment.auther_position
                                                        </span>
                                                        <span style="font-size:0.4vw; font-weight:bold">
                                                            @comment.loc_id
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="comment" style="flex:8">
                                                <div class="comment-tag"></div>
                                                <div class="comment-body" style="        display: flex;
        align-items: center;
        flex-direction: column">
                                                    <div style="display:flex; width:100%; font-weight:bold; font-size:0.5vw; justify-content:flex-end; margin-bottom:10px">
                                                        @comment.date.ToString("dddd MMM dd yyyy hh:mm tt")
                                                    </div>
                                                    <div style="width:100%; background-color:#f5f5f5; color: dimgray; font-size:0.6vw; font-weight:bold; padding:3px 10px; border-radius:5px">
                                                        @foreach (var line in comment.details.Split(new Char[] { ',', '.', '?' }))
                                                        {
                                                            <p style="padding: 0; margin: 0 ">@line</p>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <div class="row" style="padding:0px 15px 0px 25px">
                                    <div class="col-md-12" style="display:flex">

                                        @{
                                            string source_replyer = "";

                                            if (Model.ReplyEmpImage != null && Model.ReplyEmpImage != "")
                                            {
                                                source_replyer = "data:image/png;base64," + Model.ReplyEmpImage;
                                            }
                                        }

                                        <div style="flex:4">
                                            <div class="employeeTag">
                                                @if (source_replyer == "")
                                                {
                                                    <img src="~/Content/profilepic.jpg" alt="Alternate Text" style="border-radius:50%; width:2.5vw; margin-right:10px" />

                                                }
                                                else
                                                {
                                                    <img src="@source_replyer" alt="Alternate Text" style="border-radius:50%; width:2.5vw; margin-right:10px" />
                                                }

                                                <div style="display:flex; flex-direction:column; justify-content:center; color:dimgray">
                                                    <span style="font-size:0.4vw; font-weight:bold">
                                                        @Model.ReplyEmpName
                                                    </span>
                                                    <span style="font-size:0.4vw; font-weight:bold">
                                                        @Model.ReplyPosition
                                                    </span>
                                                    <span style="font-size:0.4vw; font-weight:bold">
                                                        @Model.ReplyLoc
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="comment" style="flex:8">
                                            <div class="comment-tag"></div>
                                            <div class="comment-body" style="display:flex; align-items:center; flex-direction:column">
                                                @Html.TextAreaFor(model => model.ReplyDetails, new { @class="example", @required = "required", @style = "width:100%;", oninput="if(this.value == ''){this.style.height = '50px'}else{ if(this.scrollHeight > 50){this.style.height = (this.scrollHeight) + 'px';}}"})
                                                @Html.EditorFor(model => model.ReplytoID, new { htmlAttributes = new { @required = "required", @id = "replyID", @style = "display:none" } })
                                                <div style="display:flex; width:100%; font-size:12px; font-weight:bold; margin-top:10px;">
                                                    <div>
                                                        <img src="https://cdn-icons-png.flaticon.com/512/237/237510.png" onclick="$('#addReplyAttachment').click()" style="cursor:pointer; width:15px" alt="Alternate Text" />
                                                        <input multiple style="display:none" type="file" id="addReplyAttachment" name="addReplyAttachment" value="" />
                                                    </div>
                                                    <div id="selectedReplyFile" style="margin-left:10px"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>            
        </div>
        <div class="modal-footer" style="padding:2px">
            <button type="button" class="btn btn-danger" style="padding:0px 13px" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-success" style="padding:0px 20px">Save</button>
        </div>
    </div>
}

<script>

    $(document).ready(function () {
        $('#addReplyAttachment').on('change', function (event) {
            let selectedFiles = event.target.files;
            for (let i = 0; i < selectedFiles.length; i++){
                $('#selectedReplyFile').html(selectedFiles[i].name + "<br/>" + $('#selectedReplyFile').html());
            }
        });
    });

</script>


