
@model SeHubPortal.ViewModel.PopulateProductionReport

<table class="text-center" id="dontshow" style="margin:10px 30px; width:100%;">
    <tr>
        <td style="padding:10px; width:25%">
        </td>
        <td style="padding:10px; width:50%">
            <img src="~/Content/LoginLogo.png" style="width:350px;">
        </td>
        <td style="width:25%">

            <div class="row">
                <div class="col-lg-12 text-right">
                    <p style="margin: 0px; padding: 0px; line-height : 10px">
                        <font size="2">
                            @Model.locInfo.cta_street1,
                            @if (Model.locInfo.cta_street2 != null)
                            {
                                @Model.locInfo.cta_street2
                            }
                        </font>
                    </p>
                    <p style="margin: 5px 0px 5px 10px; padding: 0px; line-height : 10px"><font size="2">@Model.locInfo.cta_city, @Model.locInfo.cta_province, @Model.locInfo.cta_postal_code</font></p>
                    <p style="margin: 5px 0px 5px 10px; padding: 0px; line-height : 10px"><font size="2">Phone : @Model.locInfo.cta_phone</font></p>
                    <p style="margin: 5px 0px 5px 10px; padding: 0px; line-height : 10px"><font size="2">Fax : @Model.locInfo.cta_fax</font></p>
                    <p style="margin: 5px 0px 5px 10px; padding: 0px; line-height : 10px"><font size="2">www.citytire.com</font></p>

                </div>

            </div>

        </td>
    </tr>
</table>

<table style="margin:10px 15px; width:100%; border:1px solid #dee0e3">
    <tr>
        <td style="padding:10px; width:5%">
            <img style="width:80px" src="~/Content/trdIcon.png" alt="Alternate Text" />
        </td>
        <td style="padding: 10px; width: 23%">

            <div class="row">
                <div class="col-lg-12 text-left">
                    <h4>TREAD</h4>
                </div>

            </div>
            <div class="row">
                <div class="col-lg-12 text-left">
                    <h4>TRACKER</h4>
                </div>
            </div>
        </td>
        <td style="padding:10px; width:33%">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3>INVENTORY TRANSFER REPORT</h3>
                </div>

            </div>
        </td>
        <td style="padding:10px; width:33%">
            <div class="row">
                <div class="col-lg-12 text-right">
                    <h5 style="text-transform: uppercase;" id="dateText">
                        @Model.date.ToString("dddd - MMM dd, yyyy")
                    </h5>

                </div>

            </div>

        </td>
    </tr>
</table>

<div class="col-md-12">
    <div class="row" style="padding:70px 15px 0px 15px; font-weight:bolder; font-size:20px">
        Transfer To Retread Plant
    </div>
    <div class="row" style="padding:0px 0px 50px 0px; ">
        <div class="col-lg-12" style="display:flex">
            <table class="table table-bordered" style="border-radius: 5px; width:80%; margin-right:35px">
                <thead style="background-color:#84888c; color:white">
                    <tr>
                        @foreach (var loc in Model.TransferOUT)
                        {
                            if (loc.Key != "007")
                            {
                                <th scope="col" style="width:50px; font-size:10px; padding:0px; margin:0px;" class="text-center">@loc.Key</th>
                            }

                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var count in Model.TransferOUT)
                        {
                            if (count.Key != "007")
                            {
                                <td style="font-size:15px; text-align:center; padding:10px">@count.Value</td>
                            }

                        }
                    </tr>
                </tbody>
            </table>

            <table class="table table-bordered" style="border-radius: 5px; width:17%">
                <thead style="background-color:#84888c; color:white">
                    <tr>
                        <th scope="col" style="width:50px; font-size:10px; padding:0px; margin:0px;" class="text-center">007</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="font-size:15px; text-align:center; padding:10px">@Model.TransferOUT.Sum(x => x.Value)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row" style="padding:0px 15px 0px 15px; font-weight:bolder; font-size:20px">
        Transfer From Retread Plant
    </div>
    <div class="row" style="padding:0px 0px 50px 0px; ">
        <div class="col-lg-12" style="display:flex">
            <table class="table table-bordered" style="border-radius: 5px; width:80%; margin-right:35px">
                <thead style="background-color:#84888c; color:white">
                    <tr>
                        @foreach (var loc in Model.TransferIN)
                        {
                            if (loc.Key != "007")
                            {
                                <th scope="col" style="width:50px; font-size:10px; padding:0px; margin:0px;" class="text-center">@loc.Key</th>
                            }

                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var count in Model.TransferIN)
                        {
                            if (count.Key != "007")
                            {
                                <td style="font-size:15px; text-align:center; padding:10px">@count.Value</td>
                            }

                        }
                    </tr>
                </tbody>
            </table>

            <table class="table table-bordered" style="border-radius: 5px; width:17%">
                <thead style="background-color:#84888c; color:white">
                    <tr>
                        <th scope="col" style="width:50px; font-size:10px; padding:0px; margin:0px;" class="text-center">007</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="font-size:15px; text-align:center; padding:10px">@Model.TransferIN.Sum(x => x.Value)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



