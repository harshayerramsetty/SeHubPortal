@model SeHubPortal.ViewModel.ProductionScheduleViewModel
@{
    ViewBag.Title = "ProductionSchedule";
    Layout = "~/Views/Shared/_TreadTrackerLayout.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/NewOrder.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

    @if (true || Model.SehubAccess.plant > 0)
    {
        <style>
            #PlantClicked {
                display: block !important;
            }
        </style>
    }

    @if (true || Model.SehubAccess.tools > 0)
    {
        <style>
            #toolsClicked {
                display: block !important;
            }
        </style>
    }

    @if (true || Model.SehubAccess.management > 0)
    {
        <style>
            #ManagementClicked {
                display: block !important;
            }
        </style>
    }

    @if (true || Model.SehubAccess.settings > 0)
    {
        <style>
            #SettingsClicked {
                display: block !important;
            }
        </style>
    }

    @if (true || Model.SehubAccess.payroll > 0)
    {
        <style>
            #PayrollClicked {
                display: block !important;
            }
        </style>
    }

    @if (true || Model.SehubAccess.fleetTVT > 0)
    {
        <style>
            #FleetTVTClicked {
                display: block !important;
            }
        </style>
    }

    @if (true || Model.SehubAccess.main > 0)
    {
        <style>
            #mainClicked {
                display: block !important;
            }
        </style>
    }

    @if (true || Model.SehubAccess.library_access > 0)
    {
        <style>
            #libraryClicked {
                display: block !important;
            }
        </style>
    }

    <style>
        #FailureAnalysisLink {
            display: block !important;
        }

        #ProductionReportLink {
            display: block !important;
        }

        #CustomersLink {
            display: block !important;
        }

        #DashboardLink {
            display: block !important;
        }

        #ProductionScheduleLink {
            color: black;
            font-weight: 700;
            background-color: #f0f2f5;
        }

        .breadCrumb {
            background-color: white;
        }

        #treadTrackereClicked {
            display: block !important;
        }

        #treadTrackereClicked {
            background-color: #f0f2f5;
            color: black;
            font-weight: 600;
        }

        #treadTrackerButton {
            color: black;
            font-weight: 600;
        }

        body {
            background-color: #f0f2f5;
        }

        .heading {
            margin: 10px 0px 0px 0px;
        }

            .heading h2 {
                margin-top: 8px;
            }


            .card-header h6 {
                color: black;
            }

        /* Hide scrollbar for Chrome, Safari and Opera */
        .example::-webkit-scrollbar {
            display: none;
        }

        /* Hide scrollbar for IE, Edge and Firefox */
        .example {
            -ms-overflow-style: none; /* IE and Edge */
            scrollbar-width: none; /* Firefox */
        }

        .NewOrder {
            padding-top: 14%;
            padding-left: 6%;
        }

        #CustomerData {
            padding-right: 12%;
        }



        .editEmployeeModal {
            padding-right: 38%;
        }

        /* Chrome, Safari, Edge, Opera */
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        /* Firefox */
        input[type=number] {
            -moz-appearance: textfield;
        }

        .arrow {
            border: solid white;
            border-width: 0 3px 3px 0;
            display: inline-block;
            padding: 3px;
        }

        .up {
            transform: rotate(-135deg);
            -webkit-transform: rotate(-135deg);
        }

        .down {
            transform: rotate(45deg);
            -webkit-transform: rotate(45deg);
        }

        /* Hide scrollbar for Chrome, Safari and Opera */
        .example::-webkit-scrollbar {
            display: none;
        }

        /* Hide scrollbar for IE, Edge and Firefox */
        .example {
            -ms-overflow-style: none; /* IE and Edge */
            scrollbar-width: none; /* Firefox */
        }

        .grayscale {
            filter: grayscale(50%);
        }

        #NewOrder {
            padding-right: 20em
        }

        .hide {
            display: none;
        }

        #searchInput {
            background-image: url("/Content/SearchIcon.png");
            background-size: 25px 25px;
            background-position: 1px 1px;
            background-repeat: no-repeat;
            padding: 2px 20px 1px 30px;
        }
    </style>

    

</head>
<body>
    <div class="row heading">
        <div class="col breadCrumb" style="margin:0px 5px 15px 15px; padding:10px; background-color:white">

            <div style="display: flex; justify-content: space-between; align-items: center">
                <div style="flex:3">
                    <a href="@Url.Action("ProductionSchedule", "TreadTracker")">Tread Tracker </a>/ Production Schedule
                </div>
                <div style="flex:3; display:flex; justify-content:center">
                    <button data-toggle="modal" style="float:right; padding:2px 10px 2px 10px" data-target="#NewOrder" class="btn btn-primary">New Order</button>
                </div>
                <div style="flex:5; display:flex; justify-content:center; align-items:center; display:none">
                    <h6><strong>Stock Production</strong></h6>
                    <div class="custom-control custom-switch" style="margin: 0px 0px 0px 7px">
                        <input type="checkbox" style="width:60px; height:25px" class="custom-control-input" id="customSwitches">
                        <label class="custom-control-label" for="customSwitches">
                            <h6><strong>Show Customer Workorder</strong></h6>
                        </label>
                    </div>
                </div>
                <div style="flex: 3">
                    <input id="searchInput" onkeyup="filterOnClass('box', this.value)" style="width:240px;border-radius:4px; float:right" type="text" placeholder="Search with Production-ID" title="Type in a name">
                </div>
            </div>

        </div>
        <button type="button" id="clickThis" class="btn" style="margin-bottom:14px;">
            <i class="fa fa-bars" style="font-size:25px"></i>
            <span class="sr-only">Toggle Menu</span>
        </button>
    </div>

    <div class="row" id="saveButton" style="display:none; padding:0px 30px 15px 30px">
        <div class="col-lg-12 text-center" style="background-color: #fdcf16; padding: 5px 0px 5px 0px">
            <button type="submit" style="margin:5px; padding:0px 30px 0px 30px" class="btn btn-success">Save</button>
            <button type="button" onclick="location.reload()" style="margin:5px; padding:0px 20px 0px 20px" class="btn btn-danger">Cancel</button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12" style="padding:0px 30px 0px 30px">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered" style="margin-bottom: 0px">
                        <thead style="background-color:#a6a8ab; color:white">
                            <tr>
                                <th style="text-align:center; font-size:10px; padding:0px; width:5%" scope="col">Production ID</th>
                                <th style="text-align:center; font-size:10px; padding:0px; width:8%" scope="col">Production Date</th>
                                <th style="display:none; text-align:center; font-size:10px; padding:0px" scope="col">Priority</th>
                                <th style="text-align:center; font-size:10px; padding:0px; width:5%" scope="col">Quantity</th>
                                <th style="text-align:center; font-size:10px; padding:0px; width:8%" scope="col">Part Num</th>
                                <th style="text-align:center; font-size:10px; padding:0px; width:10%" scope="col">Size</th>
                                <th style="text-align:center; font-size:10px; padding:0px; width:5%" scope="col">Virgin</th>
                                <th style="text-align:center; font-size:10px; padding:0px; width:10%" scope="col">Tread</th>
                                <th style="text-align:center; font-size:10px; padding:0px; width:8%" scope="col">Quantity Complete</th>
                                <th style="text-align:center; font-size:10px; padding:0px; width:28%" scope="col">Progress</th>
                                <th style="text-align:center; font-size:10px; padding:0px; width:8%" scope="col">Action</th>
                                <th style="text-align:center; font-size:10px; padding:0px; width:5%" scope="col">Edit</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="row example" style="max-height:718px; overflow-y:auto" id="activeOnly">
                        <div class="col-md-12">
                            <table id="firstTable" class="table table-striped table-bordered" style="width:100%; margin-top:0px">

                                <tbody id="firstTableBody" style="background-color:white; font-weight:bold">
                                    @foreach (var productionItem in Model.ProductionItems)
                                    {
                                        if (productionItem.quantity != productionItem.quantity_complete)
                                        {
                                            <tr class="box @productionItem.production_id">
                                                <td style="width:5%;text-align: center;font-size: 15px;padding: 0px;vertical-align: middle" scope="col">
                                                    @productionItem.production_id
                                                </td>
                                                <td style="width:8%;text-align:center; font-size:15px; padding:0px; vertical-align:middle" scope="col">
                                                    @if (productionItem.production_date.HasValue)
                                                    {
                                                        @productionItem.production_date.Value.ToString("yyyy-MMM-dd")
                                                    }
                                                </td>
                                                <td style="display: none;text-align: center;font-size: 15px;padding: 0px;vertical-align: middle" scope="col">
                                                    @productionItem.priority
                                                </td>
                                                <td style="width:5%;text-align:center; font-size:15px; padding:0px; vertical-align:middle" scope="col">
                                                    @productionItem.quantity
                                                </td>
                                                <td style="width:8%;text-align: center;font-size: 15px;padding: 0px;vertical-align: middle" scope="col">
                                                    @productionItem.part_no
                                                </td>

                                                <td style="width:10%;text-align:center; font-size:15px; padding:0px; vertical-align:middle" scope="col">
                                                    @productionItem.size
                                                </td>
                                                <td style="width:5%;text-align: center;font-size: 15px;padding: 3px;vertical-align: middle" scope="col">
                                                    @if (productionItem.virgin != null)
                                                    {
                                                        if (productionItem.virgin == "1")
                                                        {
                                                            <input type="checkbox" onclick="return false" checked readonly name="name" value="" />
                                                        }
                                                        else
                                                        {
                                                            <input type="checkbox" onclick="return false" readonly name="name" value="" />
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span>N/A</span>
                                                    }
                                                </td>
                                                <td style="width:10%;text-align:center; font-size:15px; padding:3px; vertical-align:middle" scope="col">
                                                    @productionItem.tread
                                                </td>
                                                <td style="width: 8%;text-align: center;font-size: 15px;padding: 3px;vertical-align: middle" scope="col">
                                                    @productionItem.quantity_complete
                                                </td>
                                                <td style="width:28%; text-align:center; font-size:15px; padding:3px; vertical-align:middle" scope="col">
                                                    @{
                                                        string percent1 = "0%";
                                                        if (productionItem.quantity_complete.HasValue && productionItem.quantity.HasValue)
                                                        {
                                                            percent1 = (productionItem.quantity_complete.Value * 100 / productionItem.quantity.Value).ToString() + "%";
                                                        }

                                                    }
                                                    <div class="progress">
                                                        <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @percent1" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">@percent1</div>
                                                    </div>
                                                </td>

                                                <td style="width:8%;text-align:center; font-size:15px; padding:3px; vertical-align:middle" scope="col">
                                                    <select class="ActionDropdown" style="width:90%">
                                                        <option value="Select">Select</option>
                                                        <option value="top">Move to top</option>
                                                        <option value="bottom">Move to bottom</option>
                                                        <option value="up1">Move 1 up</option>
                                                        <option value="down1">Move 1 down</option>
                                                    </select>
                                                </td>
                                                <td style="width:5%;text-align:center; font-size:15px; padding:3px; vertical-align:middle" scope="col">
                                                    <button value="@productionItem.production_id;@productionItem.quantity;@productionItem.part_no;@productionItem.casing_spec;@productionItem.size;@productionItem.tread;@productionItem.production_date;@productionItem.virgin;@productionItem.quantity_complete" onclick="edit(this.value, 'SP')" data-toggle="modal" data-target="#EditProductionItem" style="background-color: transparent;border: none;outline: none;">
                                                        <i class="fa fa-edit" style="font-size:20px;color:black;float:right"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div id="showComplete">
        <div class="row" style="display:flex; margin-bottom:10px; margin-top:0px">
            <div style="flex: 4"></div>
            <div style="flex:4; display:flex; width:100%; justify-content:space-around; align-items:center">
                <img style="width: 40px; transform:rotate(180deg);" src="~/Content/DownArrow.png" alt="Alternate Text" />
                <h4 style="margin:0px 23px 0px 23px; color:#a6a8ab"><b>Stock Production</b></h4>
                <img style="width:40px; transform:rotate(180deg);" src="~/Content/DownArrow.png" alt="Alternate Text" />
            </div>
            <div style="flex:4"></div>
        </div>
        <div class="row" style="display:flex; margin-bottom:10px">
            <div style="flex:4"></div>
            <div style="flex:4; display: flex; width: 100%; justify-content: space-around;align-items: center">
                <img style="width:40px;" src="~/Content/DownArrow.png" alt="Alternate Text" />
                <h4 style="margin:0px; color:#a6a8ab"><b>Customer Workorder</b></h4>
                <img style="width:40px;" src="~/Content/DownArrow.png" alt="Alternate Text" />
            </div>
            <div style="flex:4"></div>
        </div>
        <div class="row">
            <div class="col-md-12" style="padding:0px 30px 0px 30px">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered" style="margin-bottom: 0px">
                            <thead style="background-color:#a6a8ab; color:white">
                                <tr>
                                    <th style="text-align:center; font-size:10px; padding:0px; width:5%" scope="col">Production ID</th>
                                    <th style="text-align:center; font-size:10px; padding:0px; width:8%" scope="col">Production Date</th>
                                    <th style="display:none; text-align:center; font-size:10px; padding:0px" scope="col">Priority</th>
                                    <th style="text-align:center; font-size:10px; padding:0px; width:5%" scope="col">Quantity</th>
                                    <th style="text-align:center; font-size:10px; padding:0px; width:8%" scope="col">Part Num</th>
                                    <th style="text-align:center; font-size:10px; padding:0px; width:10%" scope="col">Size</th>
                                    <th style="text-align:center; font-size:10px; padding:0px; width:5%" scope="col">Virgin</th>
                                    <th style="text-align:center; font-size:10px; padding:0px; width:10%" scope="col">Tread</th>
                                    <th style="text-align:center; font-size:10px; padding:0px; width:8%" scope="col">Quantity Complete</th>
                                    <th style="text-align:center; font-size:10px; padding:0px; width:28%" scope="col">Progress</th>
                                    <th style="text-align:center; font-size:10px; padding:0px; width:8%" scope="col">Failed</th>
                                    <th style="text-align:center; font-size:10px; padding:0px; width:5%" scope="col">View</th>
                                </tr>
                            </thead>
                        </table>
                        <div class="row example" style="max-height:370px; overflow-y:auto">
                            <div class="col-md-12">
                                <table id="firstTable" class="table table-striped table-bordered" style="width:100%; margin-top:0px">

                                    <tbody id="firstTableBody" style="background-color:white; font-weight:bold">
                                        @foreach (var lineItem in Model.LineItems)
                                        {
                                            if (lineItem.quantity != lineItem.quantity_complete)
                                            {
                                                <tr class="box @lineItem.production_id">
                                                    <td style="width:5%;text-align: center;font-size: 15px;padding: 0px;vertical-align: middle" scope="col">
                                                        @lineItem.production_id
                                                    </td>
                                                    <td style="width:8%;text-align:center; font-size:15px; padding:0px; vertical-align:middle" scope="col">
                                                        @if (lineItem.production_date.HasValue)
                                                        {
                                                            @lineItem.production_date.Value.ToString("yyyy-MMM-dd")
                                                        }
                                                    </td>
                                                    <td style="display: none;text-align: center;font-size: 15px;padding: 0px;vertical-align: middle" scope="col">
                                                        @lineItem.priority
                                                    </td>

                                                    <td style="width:5%;text-align:center; font-size:15px; padding:0px; vertical-align:middle" scope="col">
                                                        @lineItem.quantity
                                                    </td>

                                                    <td style="width:8%;text-align: center;font-size: 15px;padding: 0px;vertical-align: middle" scope="col">
                                                        @if (lineItem.part_no != null)
                                                        {
                                                            if (lineItem.part_no.Contains(' '))
                                                            {
                                                                <span style="cursor:pointer" title="@lineItem.part_no">...</span>
                                                            }
                                                            else
                                                            {
                                                                @lineItem.part_no
                                                            }
                                                        }
                                                    </td>

                                                    <td style="width:10%;text-align:center; font-size:15px; padding:0px; vertical-align:middle" scope="col">
                                                        @if (lineItem.size.Contains(','))
                                                        {
                                                            <span style="cursor:pointer" title="@lineItem.size">...</span>
                                                        }
                                                        else
                                                        {
                                                            @lineItem.size
                                                        }
                                                    </td>

                                                    <td style="width:5%;text-align: center;font-size: 15px;padding: 3px;vertical-align: middle" scope="col">
                                                        @if (lineItem.virgin == "0")
                                                        {
                                                            <input type="checkbox" onclick="return false" />
                                                        }
                                                        else if (lineItem.virgin == "1")
                                                        {
                                                            <input checked type="checkbox" onclick="return true" />
                                                        }
                                                        else
                                                        {
                                                            <span style="cursor:pointer" title="@lineItem.virgin.Split(';')[0] Virgin and @lineItem.virgin.Split(';')[1] Non-Virgin">...</span>
                                                        }
                                                    </td>

                                                    <td style="width:10%;text-align:center; font-size:15px; padding:3px; vertical-align:middle" scope="col">
                                                        @if (lineItem.tread.Contains(','))
                                                        {
                                                            <span style="cursor:pointer" title="@lineItem.tread">...</span>
                                                        }
                                                        else
                                                        {
                                                            @lineItem.tread
                                                        }
                                                    </td>

                                                    <td style="width:8%;text-align: center;font-size: 15px;padding: 3px;vertical-align: middle" scope="col">
                                                        @lineItem.quantity_complete
                                                    </td>

                                                    <td style="width:28%; text-align:center; font-size:15px; padding:3px; vertical-align:middle" scope="col">
                                                        @{
                                                            string percent1 = "0%";
                                                            if (lineItem.quantity_complete.HasValue && lineItem.quantity.HasValue)
                                                            {
                                                                percent1 = ((lineItem.quantity_complete.Value + Convert.ToInt32(lineItem.failure_codes)) * 100 / lineItem.quantity.Value).ToString() + "%";
                                                            }
                                                        }
                                                        <div class="progress">
                                                            <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @percent1" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">@percent1</div>
                                                        </div>
                                                    </td>

                                                    <td style="width:8%;text-align: center;font-size: 15px;padding: 3px;vertical-align: middle" scope="col">
                                                        @lineItem.failure_codes
                                                    </td>

                                                    <td style="width:5%;text-align:center; font-size:15px; padding:3px; vertical-align:middle" scope="col">
                                                        <button value="@lineItem.production_id;@lineItem.quantity;@lineItem.part_no;@lineItem.casing_spec;@lineItem.size;@lineItem.tread;@lineItem.production_date;@lineItem.virgin;@lineItem.quantity_complete" onclick="edit(this.value, 'CP')" style="background-color: transparent;border: none;outline: none;">
                                                            <i class="fa fa-edit" style="font-size:20px;color:black;float:right"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="DeleteModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content" style="width:450px">
                <div class="modal-header" style="        padding: 10px
">
                    <h5 class="modal-title" style="color:black"><strong>Confirmation</strong></h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            Do you want to delete <span id="workOrder"></span> from the priority list?
                        </div>
                    </div>
                    <div class="row" style="display:none">
                        <div class="col-md-4">
                            <input class="workOrder" type="text" name="name" value="" />
                        </div>
                        <div class="col-md-4">
                            <input class="priority" type="text" name="name" value="" />
                        </div>
                        <div class="col-md-4">
                            <input id="rowIndex" type="text" name="name" value="" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="padding:8px">
                    <input type="text" readonly class="btn btn-danger" data-dismiss="modal" name="name" value="Cancel" style="height:25px; width:80px" />
                    <input type="text" readonly class="btn btn-success deleteConfirm" data-dismiss="modal" name="name" value="Delete" style="height:25px; width:80px" />
                </div>
            </div>
        </div>
    </div>

    <div id="updateModel" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content" style="width:450px">
                <div class="modal-header" style="padding:10px">
                    <h5 class="modal-title" style="color:black"><strong>Confirmation</strong></h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            Do you want to save changes?
                        </div>
                    </div>
                    <div class="row" style="display:none">
                        <div class="col-md-3">
                            <input id="priorityUpdate" type="text" name="name" value="" />
                        </div>
                        <div class="col-md-3">
                            <input id="rowIndexUpdate" type="text" name="name" value="" />
                        </div>
                        <div class="col-md-3">
                            <input id="actionUpdate" type="text" name="name" value="" />
                        </div>
                        <div class="col-md-3">
                            <input id="workOrderUpdate" type="text" name="name" value="" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="padding:8px">
                    <input type="text" readonly class="btn btn-danger" data-dismiss="modal" name="name" value="Cancel" style="height: 25px;width: 80px" />
                    <input type="text" readonly class="btn btn-success updateConfirm" data-dismiss="modal" name="name" value="Save" style="height:25px; width:80px" />
                </div>
            </div>
