    <script>

        function checkQuantityFunction() {
            if (parseInt($('#quantity_edit').val()) < parseInt($('#quantityComplete_edit').val()) ) {
                event.preventDefault();
                window.history.back();
            }
        }

        $(document).ready(function() {
            var date = new Date();

            var day = date.getDate();
            var month = date.getMonth() + 1;
            var year = date.getFullYear();

            if (month < 10) month = "0" + month;
            if (day < 10) day = "0" + day;

            var today = year + "-" + month + "-" + day;
            //alert(today)
            $("#theDate").attr("value", today);
        });


        function double(val) {
            if (val.length == 1) {
                return '0'+val
            }
            else {
                return val
            }
        }

        function edit(val) {
            var edt = val.split(";")
            var dat = edt[6].split(' ')[0].replace("/", "-").replace("/", "-");
            //alert(double(dat.split('-')[0])+'-'+double(dat.split('-')[1])+'-'+dat.split('-')[2])
            $('.production_id_edit').val(edt[0]);
            $('.quantity_edit').val(edt[1]);
            $('.part_number_edit').val(edt[2]);
            $('.casing_spec_edit').val(edt[3]);
            $('.size_edit').val(edt[4]);
            $('.tread_edit').val(edt[5]);
            $('.production_date_edit').val(dat.split('-')[2]+'-'+double(dat.split('-')[0])+'-'+double(dat.split('-')[1]));
            $('.virgin_edit').val(edt[7]);
            $('.quantityComplete_edit').val(edt[8]);
        }

        $(".ActionDropdown").change(function () {
            $('#updateModel').modal();
            var row = $(this).parents("tr:first");
            var row_index = $(this).closest("tr").index();
            $('#priorityUpdate').val(row.find('td:nth-child(3)').text().trim())
            $('#workOrderUpdate').val(row.find('td:nth-child(1)').text().trim())
            $('#actionUpdate').val(this.value)
            $('#rowIndexUpdate').val(row_index)
        });

        //

        $(document).ready(function(){
            $(".up1,.down1").click(function(){
                var row = $(this).parents("tr:first");
                //alert(row.find('td:nth-child(1)').text())
                if ($(this).is(".up1")) {
                    row.insertBefore(row.prev());
                    Update(row.find('td:nth-child(3)').text().trim(), row.find('td:nth-child(1)').text().trim(), "up1")
                } else {
                    row.insertAfter(row.next());
                    Update(row.find('td:nth-child(3)').text().trim(), row.find('td:nth-child(1)').text().trim(), "down1")
                }
            });

            $(".totalUp").click(function(){
                var row = $(this).parents("tr:first");
                row.parent().prepend(row);
                Update(row.find('td:nth-child(3)').text().trim(), row.find('td:nth-child(1)').text().trim(), "top")
            });

            $(".totalDown").click(function(){
                var row = $(this).parents("tr:first");
                row.appendTo($('#firstTable'));
                Update(row.find('td:nth-child(3)').text().trim(), row.find('td:nth-child(1)').text().trim(), "bottom")
            });

            $(".delete").click(function(){
                var row = $(this).parents("tr:first");
                $('.priority').val(row.find('td:nth-child(3)').text().trim())
                $('.workOrder').val(row.find('td:nth-child(1)').text().trim())
                $('#workOrder').text(row.find('td:nth-child(1)').text().trim())
                $('#rowIndex').val($(this).closest("tr").index())
                //row.remove();
            });

            $(".deleteConfirm").click(function(){
                //var row = $(this).parents("tr:first");
                Update($('#priorityUpdate').val(), $('#workOrderUpdate').val(), "delete")
                document.getElementById("firstTableBody").deleteRow($('#rowIndex').val());
            });

            $(".updateConfirm").click(function () {
                //Update($('.priority').val(), $('.workOrder').val(), $('#actionUpdate').val())
                var row = $("#firstTableBody tr:eq(" + $('#rowIndexUpdate').val() + ")");

                if ($('#actionUpdate').val() == "up1") {
                    row.insertBefore(row.prev());
                } else if ($('#actionUpdate').val() == "down1") {
                    row.insertAfter(row.next());
                }
                else if ($('#actionUpdate').val() == "top") {
                    row.parent().prepend(row);
                }
                else if ($('#actionUpdate').val() == "bottom") {
                    row.appendTo($('#firstTable'));
                }
            });



        });

        function Update(priority, workOrder, action) {
            $.ajax({
                url: '@Url.Action("Update", "TreadTracker")',
                data: { pr: priority, wr: workOrder, ac: action },
                async:false,
                success: function (data) {

                }
            });
        }

    </script>

