                                                        string percent1 = "0%";
                                                        if (productionItem.quantity_complete.HasValue && productionItem.quantity.HasValue)
                                                        {
                                                            percent1 = (productionItem.quantity_complete.Value * 100 / productionItem.quantity.Value).ToString() + "%";
                                                        }

                                                    }
