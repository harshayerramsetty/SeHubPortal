<body class="body" style="overflow-y: hidden; ">

    <div class="row">
        <div class="col-md-12">
            <div class="row heading">
                <div class="col" style="margin:0px 5px 15px 15px; padding:10px; background-color:white">
                    <div style="display: flex; justify-content: space-between; align-items: center">
                        <div style="flex:3">
                            <a href="@Url.Action("Customers", "TreadTracker")">TreadTracker </a>/ Customers
                        </div>
                        <div style="flex:3"></div>
                        <div style="flex:3; display:flex; justify-content:space-around">
                            <input id="searchInput" onkeyup="filterOnClass('box', this.value)" style="width:200px;border-radius:4px; float:right " type="text" placeholder="Search with name" title="Type in a name">
                        </div>
                        <div style="flex:3; justify-content:center">
                            <div style="display:flex; justify-content:center; width:100%">
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" id="customSwitches">
                                    <label class="custom-control-label" for="customSwitches">Show Complete</label>
                                </div>
                            </div>
                        </div>
                        <div style="flex:3; display:flex; justify-content:space-between; align-items:center">
                            <div></div>
                            <div style="display:flex; align-items:center">
                                <lable style="margin-right:6px">
                                    Location
                                </lable>
                                @Html.DropDownListFor(m => m.Location, Model.LocationList, new { @style = "width:100px; height:25px", @onchange = "changeLocation(this.value)" })
                            </div>
                        </div>
                    </div>

                </div>
                <button type="button" id="clickThis" class="btn" style="margin-bottom:14px;">
                    <i class="fa fa-bars" style="font-size:25px"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>
        </div>
    </div>
    <div id="load" style="display:none">
        <div class="row" style="display:flex; justify-content:center; align-items:center; height:75vh">
            <img src="~/Content/giphy.gif" style="width:150px" alt="Alternate Text" />
        </div>
    </div>
    

    <div class="payRollMainBody example">
        <div class="row" style="padding:0px 30px 0px 30px">
            <div class="col-lg-2">
                <div class="row">
                    <div class="col-lg-12">

                        @if (Model.customerDetails != null)
                        {
                            <div class="box row empButton active @Model.customerDetails.CustomerName @Model.customerDetails.CustomerCode" style="cursor: pointer; font-weight: bold; padding: 15px; background-color: white" onclick="location.href='@Url.Action("Customers", "TreadTracker", new { custID = Model.customerDetails.CustomerCode})';">
                                <div style="display:flex; flex-direction:column">
                                    @if (Model.customerDetails.CustomerName.Length > 24)
                                    {
                                        <p style="padding:0px; margin:0px">@Model.customerDetails.CustomerName.Substring(0, 24)</p>
                                    }
                                    else
                                    {
                                        <p style="padding:0px; margin:0px">@Model.customerDetails.CustomerName</p>
                                    }
                                    <p style="padding:0px; margin:0px">@Model.customerDetails.CustomerCode</p>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="row example" style="height:70vh; overflow-y:auto">
                    <div class="col-md-12">
                        @foreach (var items in Model.CustomerList)
                        {
                            if (items.Value != "Please Select Customer" && items.Value != Model.customerDetails.CustomerCode.ToString())
                            {
                                if (Model.Customer == items.Value)
                                {
                                    <div class="box row empButton active @items.Text.Split('(')[0] @items.Value" style="cursor: pointer; font-weight: bold; padding: 15px; background-color: white" onclick="location.href='@Url.Action("Customers", "TreadTracker", new { custID = items.Value})';">
                                        <div style="display:flex; flex-direction:column">
                                            @if (items.Text.Split('(')[0].Length > 24)
                                            {
                                                <p style="padding:0px; margin:0px">@items.Text.Split('(')[0].Substring(0, 24)</p>
                                            }
                                            else
                                            {
                                                <p style="padding:0px; margin:0px">@items.Text.Split('(')[0]</p>
                                            }
                                            <p style="padding:0px; margin:0px">@items.Value</p>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="box row empButton active @items.Text.Split('(')[0] @items.Value" style="cursor:pointer; padding:15px; " onclick="location.href='@Url.Action("Customers", "TreadTracker", new { custID = items.Value})';">
                                        <div style="display:flex; flex-direction:column">
                                            @if (items.Text.Split('(')[0].Length > 24)
                                            {
                                                <p style="padding:0px; margin:0px">@items.Text.Split('(')[0].Substring(0, 24)</p>
                                            }
                                            else
                                            {
                                                <p style="padding:0px; margin:0px">@items.Text.Split('(')[0]</p>
                                            }
                                            <p style="padding:0px; margin:0px">@items.Value</p>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-10" style="background-color:white">
                <div id="AttendanceRightBody">

                    <div class="row" style="padding:15px;">
                        <div class="col-md-12" style="padding:15px; border:2px solid #8d8e8f">
                            @if (Model.customerDetails != null)
                            {
                                <div class="row" style="padding:0px 15px 0px 15px; display:flex; justify-content:space-between">
                                    <h4>@Model.customerDetails.CustomerName</h4>
                                    <h4>@Model.customerDetails.CustomerCode</h4>
                                </div>
                                <div class="row" style="padding:0px 15px 7px 15px; display:flex; justify-content:space-between">
                                    <span>Contact</span>
                                    <span>@Model.customerDetails.Address1 @Model.customerDetails.Address2</span>
                                </div>
                                <div class="row" style="padding:0px 15px 0px 15px; display:flex; justify-content:space-between">
                                    <span>Email</span>
                                    <span>@Model.customerDetails.Address3, @Model.customerDetails.Postcode Canada</span>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="row example" style="height:580px; overflow-y: auto; overflow-x: hidden; padding-top:15px">

                        <div id="lodingWheel" style="display:none; width:100%">
                            <div style="width:100%; height:75vh; display:flex; justify-content:center; align-items:center">
                                <img src="~/Content/giphy.gif" style="width:100px; margin-left:auto; margin-right:auto" alt="Alternate Text" />
                            </div>
                        </div>

