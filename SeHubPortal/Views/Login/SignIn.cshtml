@model SeHubPortal.ViewModel.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <meta charset="utf-8">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/title_logo_2.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <style>
        #EmailAddress, #password {
            border: 0;
            background: none;
            display: block;
            text-align: left;
            border: 2px solid lightgray;
            outline: none;
            color: black;
            border-radius: 5px;
            transition: 0.25s;
            height: 50px;
            width: 100%;
            text-align: center;
        }


        #sbumitBtn:hover {
            background: White;
            color: Black;
        }

        #sbumitBtn {
            border: 0;
            background: none;
            display: block;
            text-align: center;
            border: 2px solid gray;
            padding: 7px 60px;
            outline: none;
            color: White;
            background-color: gray;
            border-radius: 5px;
            transition: 0.25s;
            cursor: pointer;
            height: 40px;
            font-size: 16px;
            height: 45px;
        }
    </style>
</head>
<body>
    <div class="row" style="margin-top:5%">
        <div class="col-lg-3 col-sm-12">

        </div>
        <div class="col-lg-6 col-sm-12">
            <div class="row">
                <img src='~/Content/LoginLogo.png' style="height:60%;width:60%;margin-left:20%" />
            </div>
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <div class="row" style="margin-left:15%;margin-right:13%;margin-top:30px;">
                    <div class="form-group col-md-12">

                        @*<input type="email" class="form-control input-lg" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@
                        @Html.TextBoxFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control input-lg ", @required = "required", @placeholder = "Enter Email", @type = "email", @style = "font-size: 50px;" } })

                    </div>
                    <div class="form-group col-md-12">

                        @*<input type="password" class="form-control input-lg" id="exampleInputPassword1" placeholder="Password">*@
                        @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control input-lg ", @required = "required", @placeholder = "Enter Password", @type = "password", @style = "font-size: 50px;" } })
                    </div>
                </div>
                <div class="row" style="margin-left:15%;">
                    <div class="col-md-5 col-sm-12">
                        <input id="sbumitBtn" type="submit" value="Sign in" class="btn btn-secondary" style="float:left" />
                    </div>
                    <div class="col-md-5 col-sm-12">
                        <a id="forgetPwdBtn" style="float:right;margin-top:10px;margin-right:10px;font-size:16px;" href="#" data-toggle="modal" data-target="#addModal">Forgot Password?</a>
                        <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div id="ForgetPasswordDiv">
                                    
                                </div>

                            </div>
                        </div>
                    </div>

                    
                </div>
            }
            <hr style="border: 0.5px solid lightgray;margin-left:11%;margin-right:9%" />
            <div class="row" style="margin-left:61%;margin-right:10%">
                <text style="font-size:16px;text-align:right;margin-right:6px" >Don't have an account?</text>
                <a id="SignUpBtn" class="signup" style="font-size:16px;text-align:center;" href="#" data-toggle="modal" data-target="#signupModal">Sign up</a>
                <div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div id="SignUpDiv">

                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-12">

        </div>
    </div>

   <script>
       $(document).ready(function () {
     
           $('#forgetPwdBtn').click(function () {
                $.ajax({
                            url: '@Url.Action("ForgetPasssword", "Login")',
                            data: { value: "" },
                            type: 'GET',
                            success: function (data) {
                                $("#ForgetPasswordDiv").html(data);
                            }
                });
         });

           $('#SignUpBtn').click(function () {
                $.ajax({
                            url: '@Url.Action("SignUp", "Login")',
                            data: { value: "" },
                            type: 'GET',
                            success: function (data) {
                                $("#SignUpDiv").html(data);
                            }
                });
         });

       });
   </script>
</body>


</html>
