@model SeHubPortal.ViewModel.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Login</title>
        <meta charset="utf-8">
        <link rel="shortcut icon" type="image/x-icon" href="~/Content/title_logo_2.png">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
        <style>
            #EmailAddress, #password {
                border: 0;
                background: none;
                display: block;
                text-align: left;
                border: 2px solid lightgray;
                outline: none;
                color: black;
                border-radius: 5px;
                transition: 0.25s;
                height: 50px;
                width: 100%;
                text-align: center;
            }


            #sbumitBtn:hover {
                background: White;
                color: Black;
            }

            #sbumitBtn {
                border: 0;
                background: none;
                display: block;
                text-align: center;
                border: 2px solid gray;
                padding: 7px 60px;
                outline: none;
                color: White;
                background-color: gray;
                border-radius: 5px;
                transition: 0.25s;
                cursor: pointer;
                height: 40px;
                font-size: 16px;
                height: 45px;
            }
        </style>
    </head>
    <body style="overflow-x:hidden">
        <div style="display:none">
            <div class="row">
                <div class="col-lg-12 text-right" style="padding:20px 40px 20px 40px">
                    <a style="visibility:hidden" class="text-primary" onclick="location.href='@Url.Action("HarpoonLogin", "Login")';"><u>Harpoon Login</u></a>
                </div>
            </div>
            <div class="row" style="visibility:hidden">
                <div class="col-lg-12 text-right">
                    <label>IP Address </label>
                    <input type="text" style="height:25px; outline:none; margin:15px 15px 0px 15px" readonly name="name" value="@Model.ip" />
                </div>
            </div>
        </div>

        <div class="row" style="display:flex; height:100vh; justify-content:center; align-items:center">
            <div class="col-lg-3 col-sm-12">

            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <img src='~/Content/LoginLogo.png' style="width:63%" />
                    </div>
                </div>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div class="row" style="margin-left:15%;margin-right:15%;margin-top:20px;">
                        <div class="form-group col-md-12">

                            @*<input type="email" class="form-control input-lg" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@
                            @Html.TextBoxFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control input-lg ", @required = "required", @placeholder = "Enter Email", @type = "email", @style = "font-size: 50px;" } })

                        </div>
                        <div class="form-group col-md-12">

                            @*<input type="password" class="form-control input-lg" id="exampleInputPassword1" placeholder="Password">*@
                            @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control input-lg ", @required = "required", @placeholder = "Enter Password", @type = "password", @style = "font-size: 50px;" } })
                        </div>
                    </div>

                    <div class="row" style="margin-left:15%;margin-right:15%">

                        <div class="col-md-12 col-sm-12" style="padding-right:0px">
                            <input id="sbumitBtn" type="submit" value="Sign in" class="btn btn-secondary" style="float:left" />
                            <a id="forgetPwdBtn" style="float:right;margin-top:10px;margin-right:15px;font-size:16px;" href="#" data-toggle="modal" onclick="forgot()" data-target="#forgotPassword">Forgot Password?</a>
                        </div>

                    </div>


                }
                <hr style="border: 0.5px solid lightgray;margin-left:15%;margin-right:15%" />
                <div class="row" style="margin-left:17%;margin-right:17%; display:flex; justify-content:space-between">

                    <button onclick="location.href='@Url.Action("GeneralAccess", "Login")';" style="padding: 8px 31px 9px 31px;" class="btn btn-primary">General Access</button>
                    <div style="display:flex; justify-content:flex-end">
                        <text style="font-size:16px;text-align:right;margin-right:5px">Don't have an account?</text>
                        <a id="SignUpBtn" class="signup" style="font-size:16px;text-align:center;" href="#" data-toggle="modal" data-target="#signupModal">Sign up</a>
                    </div>

                </div>
            </div>
            <div class="col-lg-3 col-sm-12">

            </div>
        </div>

        <div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div id="SignUpDiv">

                </div>

            </div>
        </div>

        <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div id="ForgetPasswordDiv">

                </div>

            </div>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header" style="padding:7px 3px 3px 15px">
                        <h5>Acknowledgment</h5>
                    </div>
                    <div class="modal-body text-center">
                        <h3>Access Denied</h3>
                    </div>
                    <div class="modal-footer" style="padding:3px">
                        <button type="button" style="padding:2px 30px 2px 30px" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>



        <script type="text/javascript" src="Scripts/jquery-1.6.2.js"></script>
        <script type="text/javascript">
            $.getJSON("http://jsonip.appspot.com?callback=?",
                function (data) {
                    alert("Your ip: " + data.ip);
                });
        </script>

        <script>

            $(document).ready(function () {
                function getUrlVars() {
                    var vars = [], hash;
                    var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
                    for (var i = 0; i < hashes.length; i++) {
                        hash = hashes[i].split('=');
                        vars.push(hash[0]);
                        vars[hash[0]] = hash[1];
                    }
                    return vars;
                }

                var acknowledgment = getUrlVars()["ac"];
                if (acknowledgment == "Denied") {
                    $('#exampleModal').modal()
                }
            });


           $(document).ready(function () {

               $('#forgetPwdBtn').click(function () {
                    $.ajax({
                                url: '@Url.Action("ForgetPasssword", "Login")',
                                data: { value: "" },
                                type: 'GET',
                                success: function (data) {
                                    $("#ForgetPasswordDiv").html(data);
                                }
                    });
             });

               $('#SignUpBtn').click(function () {
                    $.ajax({
                                url: '@Url.Action("SignUp", "Login")',
                                data: { value: "" },
                                type: 'GET',
                                success: function (data) {
                                    $("#SignUpDiv").html(data);
                                }
                    });
             });

           });
        </script>
    </body>
 

</html>
