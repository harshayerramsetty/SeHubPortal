
@model SeHubPortal.ViewModel.SignUpViewModel
<style type="text/css">
</style>


@using (Html.BeginForm("SignUp", "Login", FormMethod.Post))
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Registration Required</h5>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6">
                    <label style="text-align:left">First Name</label>
                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "text" } })
                </div>
                <div class="col-md-6">
                    <label>Last Name</label>
                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "text" } })
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-12">
                    <label>Email Address</label>
                    @Html.EditorFor(m => m.employeeId, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "text" } })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input type="text"readonly class="btn btn-danger" data-dismiss="modal" value="Cancel" style="width:100px; height:30px"/>

            <input type="submit" class="btn btn-success" style="padding:3px 20px 3px 20px" value="Request" />
        </div>
    </div>

}
