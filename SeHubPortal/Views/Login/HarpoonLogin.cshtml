@model SeHubPortal.ViewModel.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <meta charset="utf-8">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/title_logo_2.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <style>
        #EmailAddress, #password {
            border: 0;
            background: none;
            display: block;
            text-align: left;
            border: 2px solid lightgray;
            outline: none;
            color: black;
            border-radius: 5px;
            transition: 0.25s;
            height: 50px;
            width: 100%;
            text-align: center;
        }


        #sbumitBtn:hover {
            background: White;
            color: Black;
        }

        #sbumitBtn {
            border: 0;
            background: none;
            display: block;
            text-align: center;
            border: 2px solid gray;
            padding: 7px 60px;
            outline: none;
            color: White;
            background-color: gray;
            border-radius: 5px;
            transition: 0.25s;
            cursor: pointer;
            height: 40px;
            font-size: 16px;
            height: 45px;
        }
    </style>
</head>
<body style="overflow-x:hidden">
    <div class="row">
        <div class="col-lg-12 text-right" style="padding:20px 40px 20px 40px">
            <a class="text-primary" onclick="location.href='@Url.Action("SignIn", "Login")';"><u>General Login</u></a>
        </div>
    </div>
    <div class="row" style="margin-top:11%">
        <div class="col-lg-3 col-sm-12">

        </div>
        <div class="col-lg-6 col-sm-12">
            @using (Html.BeginForm("HarpoonSignIn", "Login", FormMethod.Post))
            {

                <div class="row">
                    <div class="col-md-4">
                        <img src='~/Content/Harpoon.png' style="width:150px; height:180px; margin-left:45%" />
                    </div>
                    <div class="col-md-8">
                        <div class="row" style="margin-right:13%;margin-top:40px;">
                            <div class="form-group col-md-12">

                                @*<input type="email" class="form-control input-lg" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@
                                @Html.TextBoxFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control input-lg ", @required = "required", @placeholder = "Enter Email", @type = "email", @style = "font-size: 50px;" } })

                            </div>
                            <div class="form-group col-md-12">

                                @*<input type="password" class="form-control input-lg" id="exampleInputPassword1" placeholder="Password">*@
                                @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control input-lg ", @required = "required", @placeholder = "Enter Password", @type = "password", @style = "font-size: 50px;" } })
                            </div>
                            <div class="form-group col-md-12">
                                <a id="forgetPwdBtn" style="float:right;margin-right:10px;font-size:16px;" href="#" data-toggle="modal" data-target="#addModal">Forgot Password?</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div id="ForgetPasswordDiv">

                        </div>

                    </div>
                </div>
                <hr style="border: 0.5px solid lightgray;margin-left:11%;margin-right:9%" />
                <div class="row" style="margin-left:13%;margin-right:12%; ">
                    <div class="col-md-6" style="padding:0px">
                        <input id="sbumitBtn" type="submit" value="Sign in" class="btn btn-secondary" style="float:left" />
                    </div>
                    <div class="col-md-6 text-right" style="padding:0px">
                        <text style="font-size:16px;text-align:right;margin-right:5px;">Don't have an account?</text>
                        <a id="SignUpBtn" class="signup" style="font-size:16px;text-align:center;" href="#" data-toggle="modal" data-target="#signupModal">Sign up</a>
                    </div>


                    <div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div id="SignUpDiv">

                            </div>

                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="col-lg-3 col-sm-12">

        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="padding:7px 3px 3px 15px">
                    <h5>Acknowledgment</h5>
                </div>
                <div class="modal-body text-center">
                    <h3>Access Denied</h3>
                </div>
                <div class="modal-footer" style="padding:3px">
                    <button type="button" style="padding:2px 30px 2px 30px" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>



</body>
</html>
